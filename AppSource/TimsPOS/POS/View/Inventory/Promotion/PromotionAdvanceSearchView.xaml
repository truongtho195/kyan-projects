<UserControl x:Class="CPC.POS.View.PromotionAdvanceSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helper="clr-namespace:CPC.Helper"
             x:Name="UserControl"
             Width="460"
             Height="256"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ListBoxItemStyle"
               TargetType="{x:Type ListBoxItem}">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="HorizontalContentAlignment"
                    Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
            <Setter Property="VerticalContentAlignment"
                    Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
            <Setter Property="Padding"
                    Value="2,0,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="true">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="false">
                                <Setter Property="Foreground"
                                        Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="grdPromotionAdvanceSearch">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Border x:Name="brdContentPromotionAdvanceSearch"
                Margin="15,20,15,15"
                Background="{DynamicResource TabControlBackground}"
                BorderBrush="{DynamicResource TabControlBorder}"
                BorderThickness="1">
            <Grid x:Name="grdContentPromotionAdvanceSearch"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="txtblDiscountType"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Discount Type:"
                           TextWrapping="NoWrap" />
                <ComboBox x:Name="cmbDiscountType"
                          Height="21"
                          Margin="95,2,10,2"
                          DisplayMemberPath="Text"
                          ItemsSource="{x:Static helper:Common.PromotionTypeAll}"
                          SelectedValue="{Binding PromotionTypeID}"
                          SelectedValuePath="Value" />
                <TextBlock x:Name="txtblStartDate"
                           Grid.Row="1"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Start Date:"
                           TextWrapping="NoWrap" />
                <DatePicker x:Name="dtpStartDate"
                            Grid.Row="1"
                            Width="110"
                            Margin="95,2,0,2"
                            HorizontalAlignment="Left"
                            SelectedDate="{Binding StartDate}" />
                <TextBlock x:Name="txtblEndDate"
                           Grid.Row="1"
                           Margin="225,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="End Date:"
                           TextWrapping="NoWrap" />
                <DatePicker x:Name="dtpEndDate"
                            Grid.Row="1"
                            Width="110"
                            Margin="285,2,10,2"
                            HorizontalAlignment="Left"
                            SelectedDate="{Binding EndDate}" />
                <TextBlock x:Name="txtblStatus"
                           Grid.Row="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Status:"
                           TextWrapping="NoWrap" />
                <ComboBox x:Name="cmbStatus"
                          Grid.Row="2"
                          Width="110"
                          Height="21"
                          Margin="95,2,0,2"
                          HorizontalAlignment="Left"
                          DisplayMemberPath="Text"
                          ItemsSource="{x:Static helper:Common.StatusBasicAll}"
                          SelectedValue="{Binding Status}"
                          SelectedValuePath="Value"
                          Style="{DynamicResource ComboBoxStatus}" />
                <TextBlock x:Name="txtblPriceChange"
                           Grid.Row="3"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Price Change"
                           TextWrapping="NoWrap" />
                <Rectangle x:Name="LinePriceChange"
                           Grid.Row="3"
                           Height="1"
                           Margin="92,0,2,0"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"
                           Fill="{DynamicResource GroupboxBorder}" />
                <!--<WrapPanel Grid.Row="4"
                           Margin="95,0,10,0"
                           VerticalAlignment="Top">
                    <CheckBox x:Name="cbRegularPrice"
                              Margin="0,0,0,10"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Content="  Regular Price"
                              IsChecked="True" />
                    <CheckBox x:Name="cbSalePrice"
                              Margin="10,0,0,10"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Content="  Sale Price" />
                    <CheckBox x:Name="cbWholesalePrice"
                              Margin="10,0,0,10"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Content="  Wholesale Price" />
                    <CheckBox x:Name="cbEmployee"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Content="  Employee" />
                    <CheckBox x:Name="cbCustomePrice"
                              Margin="27,0,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Content="  Custome Price" />
                </WrapPanel>-->
                <ListBox Grid.Row="4"
                         Margin="50,0,10,0"
                         VerticalAlignment="Top"
                         Background="{x:Null}"
                         BorderBrush="{x:Null}"
                         ItemContainerStyle="{DynamicResource ListBoxItemStyle}"
                         ItemsSource="{Binding PriceSchemaCollection}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Margin="0,0,10,10"
                                      Width="100"
                                      Content="{Binding Text}"
                                      IsChecked="{Binding IsChecked}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"
                                       Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Grid>
        </Border>
        <Rectangle x:Name="Line"
                   Grid.Row="1"
                   Height="1"
                   Margin="2,0"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   Fill="{DynamicResource Spilter_Line_Background}" />
        <StackPanel x:Name="stkpBtn"
                    Grid.Row="1"
                    Height="Auto"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Button x:Name="btnOK"
                    Command="{Binding OkCommand}"
                    Width="80"
                    Height="28">
                <StackPanel x:Name="stkpBtnOK"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgOK"
                               Width="20"
                               Height="20"
                               Fill="{DynamicResource OK}" />
                    <TextBlock x:Name="txtblOK"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Style="{DynamicResource ButtonTextBlock}"
                               Text="OK"
                               TextWrapping="NoWrap" />
                </StackPanel>
            </Button>
            <Button x:Name="btnCancel"
                    Command="{Binding CancelCommand}"
                    Width="80"
                    Height="28"
                    Margin="10,0,0,0">
                <StackPanel x:Name="stkpBtnCancel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgCancel"
                               Width="20"
                               Height="20"
                               Fill="{DynamicResource Cancel}" />
                    <TextBlock x:Name="txtblExit"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Style="{DynamicResource ButtonTextBlock}"
                               Text="Cancel"
                               TextWrapping="NoWrap" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
