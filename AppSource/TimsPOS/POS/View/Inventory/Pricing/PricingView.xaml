                                                   Margin="35.773,0,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center" />
                                        <TextBlock x:Name="txblBasePrice"
                                                   Margin="120.1,0,0,0"
                                                   TextWrapping="Wrap"
                                                   Text="Base Price"
                                                   Foreground="White"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center" />
                                        <TextBlock x:Name="txblAdjustment"
                                                   TextWrapping="Wrap"
                                                   Text="Adjustment"
                                                   Foreground="White"
                                                   Margin="187.33,0,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center" />
                                        <TextBlock x:Name="txblAmount"
                                                   TextWrapping="Wrap"
                                                   Text="Amount"
