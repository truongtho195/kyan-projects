<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:CPC.POS"
             xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Luna"
             xmlns:Anno="http://schemas.microsoft.com/expression/blend/extensions/annotations/2008"
             mc:Ignorable="d Anno"
             x:Class="CPC.POS.View.TransferStockView"
             x:Name="transferStockView"
             xmlns:command="clr-namespace:CPC.Toolkit.Command"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:dataGridControl="clr-namespace:CPCToolkitExt.DataGridControl;assembly=CPCToolkitExt"
             xmlns:converter="clr-namespace:CPC.Converter"
             xmlns:textBoxControl="clr-namespace:CPCToolkitExt.TextBoxControl;assembly=CPCToolkitExt"
             xmlns:cpcAutoCompleteControl="clr-namespace:CPCToolkitExt.AutoCompleteControl;assembly=CPCToolkitExt"
             xmlns:control="clr-namespace:Xceed.Wpf.Toolkit;assembly=WPFToolkit.Extended"
             xmlns:helper="clr-namespace:CPC.Helper"
             xmlns:behavior="clr-namespace:CPC.Toolkit.Behavior"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             helper:ValidationHelper.IsEnabled="True"
             helper:ValidationHelper.IsValid="{Binding IsValid, Mode=OneWayToSource}"
             Background="{DynamicResource UserControlBackground}">
    <UserControl.Resources>
        <converter:EnumToBoolConverter x:Key="enumToBoolConverter" />
        <converter:IntegerToBooleanConverter x:Key="reversedIntToBoolConverter"
                                             IsReversed="True" />
        <converter:IntegerToBooleanConverter x:Key="integerToBooleanConverter" />
        <converter:ComboxItemToTextConverter x:Key="comboxItemToTextConverter" />
        <converter:BoolToVisibilityConverter x:Key="boolToVisibilityConverter"
                                             FalseToVisibility="Visible" />
        <converter:EnumToCollapsedConverter x:Key="enumToCollapsedConverter" />
        <converter:StringFormatConverter x:Key="stringFormatConverter" />
        <converter:StringPriceLevelConverter x:Key="stringPriceLevelConverter" />
        <converter:IntToCalculationConverter x:Key="intToCalculationConverter" />
        <ContextMenu x:Key="TransferStockContextMenu">
            <MenuItem Command="{Binding DataContext.NewCommand,
                                        RelativeSource={RelativeSource AncestorType={x:Type UserControl},
                                                                       Mode=FindAncestor}}"
                      CommandParameter="NewItem"
                      Header="New Item">
                <MenuItem.Icon>
                    <Rectangle Width="16"
                               Height="16"
                               Fill="{DynamicResource NewItem}"
                               Stretch="Fill" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding DataContext.EditCommand,
                                        RelativeSource={RelativeSource AncestorType={x:Type UserControl},
                                                                       Mode=FindAncestor}}"
                      CommandParameter="{Binding .}"
                      Header="Edit Item">
                <MenuItem.Icon>
                    <Rectangle Width="16"
                               Height="16"
                               Fill="{DynamicResource EditItem}"
                               Stretch="Fill" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Command="{Binding DataContext.TransferCommand,
                                        RelativeSource={RelativeSource AncestorType={x:Type UserControl},
                                                                       Mode=FindAncestor}}"
                      CommandParameter="{Binding .}"
                      Header="Apply TransferStock">
                <MenuItem.Icon>
                    <Rectangle Width="16"
                               Height="16"
                               Fill="{DynamicResource ApplyPricing}"
                               Stretch="Fill" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
        <Style x:Key="TransferStockDataGridContextMenu"
               BasedOn="{StaticResource {x:Type DataGridRow}}"
               TargetType="{x:Type DataGridRow}">
            <Setter Property="ContextMenu"
                    Value="{StaticResource TransferStockContextMenu}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridRow}">
                        <Border x:Name="DGR_Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <SelectiveScrollingGrid>
                                <SelectiveScrollingGrid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </SelectiveScrollingGrid.ColumnDefinitions>
                                <SelectiveScrollingGrid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </SelectiveScrollingGrid.RowDefinitions>
                                <DataGridCellsPresenter Grid.Column="1"
                                                        ItemsPanel="{TemplateBinding ItemsPanel}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                <DataGridDetailsPresenter Grid.Row="1"
                                                          Grid.Column="1"
                                                          Visibility="{TemplateBinding DetailsVisibility}" />
                                <DataGridRowHeader Grid.RowSpan="2"
                                                   SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                                                   Style="{DynamicResource DataGridRowHeaderStyle}" />
                            </SelectiveScrollingGrid>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
    </UserControl.Resources>
    <Grid x:Name="GridLayout">
        <Rectangle x:Name="UserControl_Background_Image"
                   Fill="{DynamicResource UserControl_Background_Image}" />
        <control:BusyIndicator IsBusy="{Binding IsBusy}">
            <Grid x:Name="grdTransferStock">
                <Grid x:Name="grdContentSearch"
                      d:LayoutOverrides="GridBox"
                      d:IsHidden="True">
                    <Grid.Visibility>
                        <Binding Path="IsSearchMode"
                                 Mode="OneWay"
                                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.Converter>
                                <converter:BoolToVisibilityConverter FalseToVisibility="Collapsed" />
                            </Binding.Converter>
                        </Binding>
                    </Grid.Visibility>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="87" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <GroupBox x:Name="gbSearch"
                              Margin="10,10,10,0"
                              d:IsHidden="True">
                        <GroupBox.Header>
                            <TextBlock x:Name="txtblSearch"
                                       Text="Search"
                                       TextWrapping="NoWrap"
                                       Style="{DynamicResource GroupboxTextBlock}" />
                        </GroupBox.Header>
                        <Grid x:Name="grdgbSearch"
                              Margin="0,4,0,0">
                            <Grid x:Name="grdgbContentSearch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                </Grid.RowDefinitions>
                                <control:WatermarkTextBox x:Name="txtKeyword"
                                                          Margin="10,2"
                                                          VerticalContentAlignment="Center"
                                                          Padding="20,0,2,0"
                                                          Text="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          TextWrapping="NoWrap"
                                                          Watermark="Keyword">
                                    <control:WatermarkTextBox.InputBindings>
                                        <KeyBinding Key="Enter"
                                                    Command="{Binding SearchCommand}"
                                                    CommandParameter="{Binding Path=Text, ElementName=txtKeyword}" />
                                    </control:WatermarkTextBox.InputBindings>
                                </control:WatermarkTextBox>
                                <Rectangle x:Name="imgFind1"
                                           Fill="{DynamicResource Find}"
                                           HorizontalAlignment="Left"
                                           Width="20"
                                           Margin="13,3,0,3" />
                                <StackPanel x:Name="stkpCheckbox"
                                            HorizontalAlignment="Left"
                                            Grid.Row="1"
                                            Orientation="Horizontal"
                                            Margin="10,0,0,0"
                                            d:LayoutOverrides="HorizontalAlignment"
                                            VerticalAlignment="Center">
                                    <CheckBox x:Name="cbTransferNo"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Content="Transfer No."
                                              IsChecked="{Binding SearchOption, ConverterParameter={x:Static local:SearchTransferOptions.TransferNo}, Converter={StaticResource enumToBoolConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                    <CheckBox x:Name="cbDateTransfered"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Content="Date Transfered"
                                              Margin="10,0,0,0"
                                              IsChecked="{Binding SearchOption, ConverterParameter={x:Static local:SearchTransferOptions.DateTransfered}, Converter={StaticResource enumToBoolConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Margin="10,0,0,0"
                                               Foreground="#FFFDFF00"
                                               Text="{Binding SearchAlert}"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </GroupBox>
                    <dataGridControl:DataGridControl x:Name="dtgrdSearch"
                                                     Grid.Row="1"
                                                     Margin="10"
                                                     CanUserAddRows="False"
                                                     IsRollBackData="False"
                                                     AutoGenerateColumns="False"
                                                     CanUserDeleteRows="False"
                                                     behavior:DoubleClickCommandBehavior.DoubleClickCommand="{Binding DoubleClickViewCommand}"
                                                     behavior:DoubleClickCommandBehavior.DoubleClickCommandParameter="DoubleClick"
                                                     NumberOfItems="{Binding TotalTransferStock}"
                                                     DisplayItems="{Binding NumberOfDisplayItems}"
                                                     CurrentPageIndex="{Binding CurrentPageIndex}"
                                                     ItemsSource="{Binding TransferStockCollection}"
                                                     SelectedItem="{Binding SelectedTransferStock}"
                                                     RowStyle="{DynamicResource TransferStockDataGridContextMenu}"
                                                     Style="{DynamicResource DatagridWithoutRowHeader}">
                        <dataGridControl:DataGridControl.Columns>
                            <DataGridTemplateColumn Header="Transfer No."
                                                    IsReadOnly="True"
                                                    Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TransferNo, Mode=OneWay}"
                                                   TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Date Transfered"
                                                    IsReadOnly="True"
                                                    Width="85">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DateApplied, Mode=OneWay,StringFormat={x:Static local:Define.DateFormat}}"
                                                   TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Status"
                                                    IsReadOnly="True"
                                                    Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Status, Mode=OneWay,ConverterParameter=TransferStockStatus,Converter={StaticResource comboxItemToTextConverter}}"
                                                   TextAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="From Store"
                                                    IsReadOnly="True"
                                                    Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FromStoreValue.Name, Mode=OneWay}"
                                                   TextAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="To Store"
                                                    IsReadOnly="True"
                                                    Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ToStoreValue.Name, Mode=OneWay}"
                                                   TextAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Total Qty"
                                                    IsReadOnly="True"
                                                    Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TotalQuantity, Mode=OneWay}"
                                                   TextAlignment="Right" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="User Created"
                                                    IsReadOnly="True"
                                                    Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding UserCreated, Mode=OneWay}"
                                                   TextAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Date Applied"
                                                    IsReadOnly="True"
                                                    Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DateApplied, Mode=OneWay,StringFormat={x:Static local:Define.DateFormat}}"
                                                   TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="User Applied"
                                                    IsReadOnly="True"
                                                    Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding UserApplied, Mode=OneWay}"
                                                   TextAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Date Reversed"
                                                    IsReadOnly="True"
                                                    Width="75">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DateReversed, Mode=OneWay,StringFormat={x:Static local:Define.DateFormat}}"
                                                   TextAlignment="Center" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="User Reversed"
                                                    IsReadOnly="True"
                                                    Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding UserReversed, Mode=OneWay}"
                                                   TextAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </dataGridControl:DataGridControl.Columns>
                    </dataGridControl:DataGridControl>
                </Grid>
                <Grid x:Name="grdContentTransferStock"
                      Grid.Column="1">
                    <Grid.Visibility>
                        <Binding Path="IsSearchMode"
                                 Mode="OneWay"
                                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.Converter>
                                <converter:BoolToVisibilityConverter FalseToVisibility="Visible" />
                            </Binding.Converter>
                        </Binding>
                    </Grid.Visibility>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="22" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnBarSearch"
                            Background="#02DFEDFF"
                            BorderThickness="1"
                            BorderBrush="{x:Null}"
                            Command="{Binding DoubleClickViewCommand}"
                            Style="{DynamicResource ButtonBarSearch}"
                            d:LayoutOverrides="GridBox">
                        <TextBlock VerticalAlignment="Center"
                                   Text="Search"
                                   TextWrapping="NoWrap"
                                   HorizontalAlignment="Center"
                                   x:Name="txtblShowSearch1"
                                   Style="{DynamicResource ButtonBarSearchTextBlock}">
                			<TextBlock.LayoutTransform>
                				<TransformGroup>
                					<ScaleTransform />
                					<SkewTransform />
                					<RotateTransform Angle="-90" />
                					<TranslateTransform />
                				</TransformGroup>
                			</TextBlock.LayoutTransform>
                        </TextBlock>
                    </Button>
                    <Rectangle x:Name="grdSpliter"
                               Width="1"
                               Grid.Column="1"
                               Fill="{DynamicResource Spilter_Line_Background}"
                               HorizontalAlignment="Left" />

                    <Grid x:Name="grdSubTransferStock"
                          Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="40" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel VerticalAlignment="Bottom"
                                    Height="Auto"
                                    HorizontalAlignment="Left"
                                    x:Name="stkpBtn"
                                    Orientation="Horizontal"
                                    Margin="20,0,0,5">
                            <Button Style="{DynamicResource ButtonSystem}"
                                    x:Name="btnNew"
                                    Command="{Binding NewCommand}"
                                    Height="40"
                                    Width="40"
                                    Margin="0"
                                    Visibility="Visible">
                                <StackPanel HorizontalAlignment="Center"
                                            x:Name="stkpBtnNew"
                                            VerticalAlignment="Center">
                                    <Rectangle x:Name="imgNew"
                                               Fill="{DynamicResource New}"
                                               Height="30"
                                               Width="30" />
                                    <TextBlock VerticalAlignment="Center"
                                               Text="New"
                                               TextWrapping="NoWrap"
                                               x:Name="txtblNew"
                                               Visibility="Collapsed"
                                               Style="{DynamicResource ButtonSystemTextBlock}" />
                                </StackPanel>
                            </Button>
                            <Button Style="{DynamicResource ButtonSystem}"
                                    x:Name="btnSave"
                                    Height="40"
                                    Command="{Binding SaveCommand}"
                                    Width="40"
                                    Visibility="Visible">
                                <StackPanel HorizontalAlignment="Center"
                                            x:Name="stkpBtnSave"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                    <Rectangle x:Name="imgSave"
                                               Fill="{DynamicResource Save}"
                                               Height="30"
                                               Width="30" />
                                    <TextBlock Margin="5,0,0,0"
                                               VerticalAlignment="Center"
                                               Text="Save"
                                               TextWrapping="NoWrap"
                                               x:Name="txtblSave"
                                               Visibility="Collapsed"
                                               Style="{DynamicResource ButtonSystemTextBlock}" />
                                </StackPanel>
                            </Button>
                            <Button Style="{DynamicResource ButtonSystem}"
                                    x:Name="btnDelete"
                                    Height="40"
                                    Visibility="Collapsed"
                                    Width="40">
                                <StackPanel HorizontalAlignment="Center"
                                            x:Name="stkpBtnDelete"
                                            VerticalAlignment="Center">
                                    <Rectangle x:Name="imgDelete"
                                               Fill="{DynamicResource Delete}"
                                               Height="30"
                                               Width="30" />
                                    <TextBlock Margin="5,0,0,0"
                                               x:Name="txtblDelete"
                                               VerticalAlignment="Center"
                                               Text="Close"
                                               TextWrapping="NoWrap"
                                               Visibility="Collapsed"
                                               Style="{DynamicResource ButtonSystemTextBlock}" />
                                </StackPanel>
                            </Button>
                            <Button Style="{DynamicResource ButtonSystem}"
                                    x:Name="btnPrint"
                                    Width="40"
                                    Visibility="Collapsed"
                                    VerticalAlignment="Center"
                                    Height="40">
                                <StackPanel HorizontalAlignment="Center"
                                            x:Name="stkpBtnPrint"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                    <Rectangle x:Name="imgPrint"
                                               Fill="{DynamicResource Print}"
                                               Height="30"
                                               Width="30" />
                                    <TextBlock Margin="5,0,0,0"
                                               x:Name="txtblPrint"
                                               VerticalAlignment="Center"
                                               Text="Preview"
                                               TextWrapping="NoWrap"
                                               Visibility="Collapsed"
                                               Style="{DynamicResource ButtonSystemTextBlock}" />
                                </StackPanel>
                            </Button>
                            <Button Style="{DynamicResource ButtonSystem}"
                                    x:Name="btnReceive"
                                    Width="40"
                                    VerticalAlignment="Center"
                                    Height="40"
                                    Visibility="Collapsed">
                                <StackPanel HorizontalAlignment="Center"
                                            x:Name="stkpBtnReceive"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                    <Rectangle x:Name="imgReceive"
                                               Fill="{DynamicResource Receive}"
                                               Height="30"
                                               Width="30" />
                                    <TextBlock Margin="5,0,0,0"
                                               x:Name="txtblReceive"
                                               VerticalAlignment="Center"
                                               Text="Preview"
                                               TextWrapping="NoWrap"
                                               Visibility="Collapsed"
                                               Style="{DynamicResource ButtonSystemTextBlock}" />
                                </StackPanel>
                            </Button>
                            <Button Style="{DynamicResource ButtonSystem}"
                                    x:Name="btnRestore"
                                    Height="40"
                                    Visibility="{Binding SelectedTransferStock.VisibilityReversed,Mode=OneWay}"
                                    Command="{Binding RevertCommand}"
                                    Width="40">
                                <StackPanel HorizontalAlignment="Center"
                                            x:Name="stkpRestore"
                                            VerticalAlignment="Center">
                                    <Rectangle x:Name="imgRestore"
                                               Fill="{DynamicResource Restore}"
                                               Height="30"
                                               Width="30" />
                                    <TextBlock Margin="5,0,0,0"
                                               x:Name="txtblRestore"
                                               VerticalAlignment="Center"
                                               Text="Attachment"
                                               TextWrapping="NoWrap"
                                               Visibility="Collapsed"
                                               Style="{DynamicResource ButtonSystemTextBlock}" />
                                </StackPanel>
                            </Button>
                            <Button Style="{DynamicResource ButtonSystem}"
                                    x:Name="btnApply"
                                    Height="40"
                                    Visibility="{Binding SelectedTransferStock.VisibilityApplied,Mode=OneWay}"
                                    Command="{Binding TransferCommand}"
                                    Width="40">
                                <StackPanel HorizontalAlignment="Center"
                                            x:Name="stkpApply"
                                            VerticalAlignment="Center">
                                    <Rectangle x:Name="imgApply"
                                               Height="30"
                                               Width="30"
                                               Fill="{DynamicResource OK}" />
                                    <TextBlock Margin="5,0,0,0"
                                               x:Name="txtblApply"
                                               VerticalAlignment="Center"
                                               Text="Attachment"
                                               TextWrapping="NoWrap"
                                               Visibility="Collapsed"
                                               Style="{DynamicResource ButtonSystemTextBlock}" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <Rectangle Fill="{DynamicResource Spilter_Line_Background}"
                                   HorizontalAlignment="Stretch"
                                   x:Name="Line"
                                   VerticalAlignment="Top"
                                   Height="1"
                                   Grid.Row="1"
                                   Margin="2,0" />
                        <TextBlock x:Name="txtblBindingTransferStock"
                                   Text="Transfer Stock"
                                   TextWrapping="NoWrap"
                                   Margin="0,0,20,7"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   Style="{DynamicResource TextBlockTitleFormView}" />
                        <Grid x:Name="grdTransferStockInformation"
                              Margin="0,10,0,0"
                              Width="747"
                              IsEnabled="{Binding SelectedTransferStock.IsEnable,Mode=OneWay}"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Grid.Row="1"
                              Height="25">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25" />
                                <RowDefinition Height="0" />
                                <RowDefinition Height="0" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="75" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="txtblForm"
                                       Text="Form:"
                                       TextWrapping="NoWrap"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"
                                       d:LayoutOverrides="GridBox"
                                       Style="{DynamicResource TextBlockNormal}" />
                            <ComboBox x:Name="txtFrom"
                                      Margin="0,2"
                                      ItemsSource="{Binding FromStoreCollection}"
                                      DisplayMemberPath="Name"
                                      SelectedItem="{Binding SelectedTransferStock.FromStoreValue, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                      Grid.Column="1" />
                            <ComboBox VerticalAlignment="Stretch"
                                      Margin="0,2"
                                      x:Name="cmbTo"
                                      Grid.Column="3"
                                      ItemsSource="{Binding ToStoreCollection}"
                                      DisplayMemberPath="Name"
                                      SelectedItem="{Binding SelectedTransferStock.ToStoreValue, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                            <TextBlock x:Name="txtblTo"
                                       Text="To:"
                                       TextWrapping="NoWrap"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Grid.Column="2"
                                       Margin="0,0,10,0"
                                       Style="{DynamicResource TextBlockNormal}" />
                            <TextBlock x:Name="txtblShipDate"
                                       Text="Ship Date:"
                                       TextWrapping="NoWrap"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"
                                       HorizontalAlignment="Right"
                                       Grid.Column="4"
                                       Style="{DynamicResource TextBlockNormal}" />
                            <DatePicker Margin="0,2"
                                        SelectedDate="{Binding SelectedTransferStock.ShipDate, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                        x:Name="dtpShipDate"
                                        Grid.Column="7"
                                        HorizontalAlignment="Left"
                                        Width="110"
                                        Background="White" />
                        </Grid>
                        <Border x:Name="brdTransferStock"
                                BorderThickness="1"
                                Grid.Row="2"
                                Margin="10"
                                Background="{DynamicResource TabControlBackground}"
                                BorderBrush="{DynamicResource TabControlBorder}">
                            <Grid x:Name="grdContentOrder">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="Auto"
                                                   MinHeight="5.6" />
                                    <RowDefinition />
                                    <RowDefinition Height="95" />
                                </Grid.RowDefinitions>
                                <Grid x:Name="gridSearchProduct"
                                      IsEnabled="{Binding SelectedTransferStock.IsEnable,Mode=OneWay}"
                                      HorizontalAlignment="Left"
                                      Margin="10,4.5,0,4.5"
                                      Width="509">
                                    <TextBlock x:Name="txtblSelectItem"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               TextWrapping="NoWrap"
                                               Text="Select Item:"
                                               Style="{DynamicResource TextBlockNormal}" />
                                    <cpcAutoCompleteControl:AutoCompleteTextBox Height="21"
                                                                                Margin="65,0,94,0"
                                                                                VerticalAlignment="Center"
                                                                                AutoChangeSelectedItem="False"
                                                                                FieldSource="{Binding ProductFieldCollection}"
                                                                                FilterMode="Contains"
                                                                                IsEnabled="{Binding IsAllowChangeOrder, Mode=OneWay}"
                                                                                IsTextCompletionEnabled="False"
                                                                                ItemsSource="{Binding ProductCollection}"
                                                                                SelectedItemResult="{Binding SelectedProduct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                                d:LayoutOverrides="GridBox">
                                        <cpcAutoCompleteControl:AutoCompleteTextBox.Columns>
                                            <GridViewColumn Width="120"
                                                            DisplayMemberBinding="{Binding Code}"
                                                            Header="Code" />
                                            <GridViewColumn Width="150"
                                                            DisplayMemberBinding="{Binding ProductName}"
                                                            Header="ProductName" />
                                            <GridViewColumn Width="80"
                                                            DisplayMemberBinding="{Binding Attribute}"
                                                            Header="Attribute" />
                                            <GridViewColumn Width="80"
                                                            DisplayMemberBinding="{Binding Size}"
                                                            Header="Size" />
                                        </cpcAutoCompleteControl:AutoCompleteTextBox.Columns>
                                    </cpcAutoCompleteControl:AutoCompleteTextBox>
                                    <Button x:Name="btnAdvanceSearch1"
                                            Height="21"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"
                                            d:LayoutOverrides="Height"
                                            Command="{Binding SearchProductAdvanceCommand}"
                                            Width="90">
                                        <TextBlock VerticalAlignment="Center"
                                                   Text="Advance Search"
                                                   TextWrapping="NoWrap"
                                                   x:Name="txtblAdvanceSearch"
                                                   Style="{DynamicResource ButtonTextBlock}" />
                                    </Button>
                                </Grid>
                                <dataGridControl:DataGridControl x:Name="dtgrdTransferStock"
                                                                 AutoGenerateColumns="False"
                                                                 CanUserAddRows="False"
                                                                 CanUserDeleteRows="False"
                                                                 IsPaging="False"
                                                                 IsRollBackData="False"
                                                                 VisibilityNavigationBar="Collapsed"
                                                                 NumberOfItems="{Binding SelectedTransferStock.TotalQuantity}"
                                                                 DeleteCommandParameter="{Binding SelectedItem, ElementName=dtgrdTransferStock}"
                                                                 DeleteItemCommand="{Binding DeleteSaleOrderDetailCommand}"
                                                                 ItemsSource="{Binding SelectedTransferStock.TransferStockDetailCollection}"
                                                                 Style="{DynamicResource DatagridWithRowHeader}"
                                                                 Grid.Row="2"
                                                                 Margin="10,0,10,5">
                                    <dataGridControl:DataGridControl.Columns>
                                        <DataGridTemplateColumn Header="Item Code"
                                                                IsReadOnly="True"
                                                                Width="90">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ItemCode, Mode=OneWay}"
                                                               TextAlignment="Center" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Name"
                                                                IsReadOnly="True"
                                                                Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ItemName, Mode=OneWay}"
                                                               TextAlignment="Left" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Attribute"
                                                                IsReadOnly="True"
                                                                Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ItemAtribute, Mode=OneWay}"
                                                               TextAlignment="Left" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Size"
                                                                IsReadOnly="True"
                                                                Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ItemSize, Mode=OneWay}"
                                                               TextAlignment="Left" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Quantity"
                                                                Width="70">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock HorizontalAlignment="Center"
                                                               Text="{Binding Quantity, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <Grid IsEnabled="{Binding DataContext.SelectedTransferStock.IsEnable,Mode=OneWay,RelativeSource={RelativeSource AncestorType={x:Type UserControl}, Mode=FindAncestor}}">
                                                        <textBoxControl:TextBoxNumeric x:Name="txtQuantity"
                                                                                       TextAlignment="Right"
                                                                                       Width="60"
                                                                                       HorizontalAlignment="Center"
                                                                                       HorizontalContentAlignment="Center"
                                                                                       Value="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                            <i:Interaction.Triggers>
                                                                <i:EventTrigger EventName="LostFocus">
                                                                    <command:EventToCommand Command="{Binding DataContext.QtyChangedCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}, Mode=FindAncestor}}"
                                                                                            CommandParameter="{Binding .}" />
                                                                </i:EventTrigger>
                                                            </i:Interaction.Triggers>
                                                        </textBoxControl:TextBoxNumeric>
                                                    </Grid>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellEditingTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Width="80"
                                                                Header="UOM">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock TextAlignment="Left"
                                                               Text="{Binding BaseUOM, Mode=OneWay}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>

                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <Grid IsEnabled="{Binding DataContext.SelectedTransferStock.IsEnable,Mode=OneWay,RelativeSource={RelativeSource AncestorType={x:Type UserControl}, Mode=FindAncestor}}">
                                                        <ComboBox x:Name="cmbUnit"
                                                                  Width="70"
                                                                  DisplayMemberPath="Name"
                                                                  ItemsSource="{Binding ProductUOMCollection, Mode=OneWay}"
                                                                  SelectedValue="{Binding UOMId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                  SelectedValuePath="UOMId" />
                                                    </Grid>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellEditingTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Price"
                                                                IsReadOnly="True"
                                                                Width="70">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Price, Mode=OneWay, StringFormat=\{0:c2\}}"
                                                               TextAlignment="Right" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Amount"
                                                                IsReadOnly="True"
                                                                Width="90">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Amount, Mode=OneWay, StringFormat=\{0:c2\}}"
                                                               TextAlignment="Right" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Available Qty"
                                                                IsReadOnly="True"
                                                                Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding AvlQuantity, Mode=OneWay}"
                                                               TextAlignment="Right" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </dataGridControl:DataGridControl.Columns>
                                </dataGridControl:DataGridControl>
                                <Grid x:Name="grdTransferStockSubTotal"
                                      Margin="10,0"
                                      IsEnabled="{Binding SelectedTransferStock.IsEnable, Mode=OneWay}"
                                      VerticalAlignment="Top"
                                      Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="125" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="130" />
                                        <ColumnDefinition Width="117" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="35" />
                                    </Grid.RowDefinitions>
                                    <TextBlock x:Name="txtblRemark1"
                                               Text="Remark:"
                                               TextWrapping="NoWrap"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="0"
                                               Style="{DynamicResource TextBlockNormal}" />
                                    <textBoxControl:TextBox x:Name="txtRemark1"
                                                            TextWrapping="Wrap"
                                                            Padding="2,0,2,0"
                                                            Grid.Row="1"
                                                            Margin="0,2"
                                                            Grid.RowSpan="2"
                                                            Grid.ColumnSpan="3"
                                                            Width="360"
                                                            MaxLength="200"
                                                            Text="{Binding SelectedTransferStock.Comment, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                            HorizontalAlignment="Left" />
                                    <TextBlock x:Name="txtblOTransferStockSubTotal"
                                               Text="Sub-Total:"
                                               TextWrapping="NoWrap"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Grid.Column="3"
                                               Margin="10,0,0,0"
                                               Style="{DynamicResource TextBlockNormal}" />
                                    <TextBox x:Name="txtTransferStockSubTotal"
                                             TextWrapping="NoWrap"
                                             Padding="2,0,2,0"
                                             Grid.Column="4"
                                             Grid.RowSpan="1"
                                             Margin="0,2"
                                             IsReadOnly="True"
                                             HorizontalContentAlignment="Right"
                                             Text="{Binding SelectedTransferStock.SubTotal, Mode=OneWay, StringFormat=\{0:c2\}}" />
                                    <textBoxControl:TextBox x:Name="txtTransferStockTax"
                                                            Margin="0,2"
                                                            TextWrapping="NoWrap"
                                                            Padding="2,0,2,0"
                                                            Grid.Column="4"
                                                            Grid.RowSpan="1"
                                                            HorizontalContentAlignment="Right"
                                                            Text="$10.00"
                                                            Grid.Row="2"
                                                            Visibility="Collapsed" />
                                    <TextBlock x:Name="txtblFreight"
                                               Text="Freight:"
                                               TextWrapping="NoWrap"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Grid.Column="3"
                                               Margin="8,0,0,0"
                                               Style="{DynamicResource TextBlockNormal}"
                                               Grid.Row="1" />
                                    <textBoxControl:TextBoxMoney x:Name="txtShippingHandling"
                                                                 Margin="0,2"
                                                                 TextWrapping="NoWrap"
                                                                 Padding="2,0,2,0"
                                                                 Grid.Column="4"
                                                                 Grid.RowSpan="1"
                                                                 Value="{Binding SelectedTransferStock.ShippingFee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                 HorizontalContentAlignment="Right"
                                                                 Grid.Row="1" />
                                    <TextBlock x:Name="txtblTransferStockTotal"
                                               Text="Total:"
                                               Foreground="White"
                                               TextWrapping="NoWrap"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Grid.Row="2"
                                               Grid.Column="3"
                                               Margin="8,0,0,0"
                                               Style="{DynamicResource TextBlockNormal}" />
                                    <textBoxControl:TextBox x:Name="txtTransferStockTotal"
                                                            Margin="0,2"
                                                            TextWrapping="NoWrap"
                                                            Padding="2,0,2,0"
                                                            Grid.Column="4"
                                                            Grid.Row="2"
                                                            IsReadOnly="True"
                                                            HorizontalContentAlignment="Right"
                                                            VerticalContentAlignment="Center"
                                                            Text="{Binding SelectedTransferStock.Total, Mode=OneWay, StringFormat=\{0:c2\}}"
                                                            Style="{DynamicResource TextBoxTotal}" />
                                </Grid>

                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </control:BusyIndicator>
    </Grid>
</UserControl>