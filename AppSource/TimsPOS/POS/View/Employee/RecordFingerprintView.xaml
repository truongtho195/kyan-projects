                           Stroke="White"
                           RadiusX="5"
                           RadiusY="5"
                           Margin="0,0,0,1"
                           ToolTipService.ShowDuration="6000">
                    <Rectangle.ToolTip>
                        <ToolTip StaysOpen="{Binding ShowToolTip}">
                            <TextBlock Text="{Binding StatusToolTip}" />
                        </ToolTip>
                    </Rectangle.ToolTip>
                    <Rectangle.Style>
                        <Style TargetType="{x:Type Rectangle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MatchOne}"
                                             Value="True">
                                    <Setter Property="Fill"
                                            Value="Red" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding MatchOne}"
                                                     Value="False">
                                            <Setter Property="Fill"
                                                    Value="Transparent" />
                                        </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>
                <TextBlock x:Name="txtblConfirmation1"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="66.667"
                           Foreground="White"
                           Text="1"
                           TextWrapping="Wrap"
                           Height="80.47"
                           Margin="21.803,0,0,0"
                           Grid.RowSpan="2"
                           Width="36.393" />
                <Rectangle x:Name="brdConfirmation2"
                           Stroke="White"
                           RadiusX="5"
                           RadiusY="5"
                           Grid.Row="1"
                           Margin="0,1,0,0">
                    <Rectangle.Style>
                        <Style TargetType="{x:Type Rectangle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MatchTwo}"
                                             Value="True">
                                    <Setter Property="Fill"
                                            Value="Red" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding MatchTwo}"
                                                     Value="False">
                                            <Setter Property="Fill"
                                                    Value="Transparent" />
                                        </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>
                <TextBlock x:Name="txtblConfirmation2"
                           HorizontalAlignment="Center"
                           Margin="0"
                           VerticalAlignment="Top"
                           FontSize="66.667"
                           Foreground="White"
                           Text="2"
                           TextWrapping="Wrap"
                           Grid.Row="1" />
            </Grid>
            <Border x:Name="brdResult"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Width="110"
                    Height="160"
                    BorderBrush="White"
                    BorderThickness="1"
                    Padding="5"
                    Margin="0,25,0,0">
                
                <Image x:Name="imgResult"
                       Stretch="Uniform">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentMatch}"
                                             Value="0">
                                    <Setter Property="Source"
                                            Value="{x:Null}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentMatch}"
                                             Value="1">
                                    <Setter Property="Source"
                                            Value="/../Image/GreenFingerprint.png" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentMatch}"
                                             Value="2">
                                    <Setter Property="Source"
                                            Value="/../Image/RedFingerprint.png" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Border>
        </Grid>
        <Rectangle Fill="{DynamicResource Spilter_Line_Background}"
                   HorizontalAlignment="Stretch"
                   x:Name="Line"
                   VerticalAlignment="Top"
                   Height="1"
                   Grid.Row="1"
                   Margin="2,0,2,0" />

        <StackPanel x:Name="stkpBtn"
                    Grid.Row="1"
                    Height="Auto"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Button x:Name="btnOK"
                    Command="{Binding OKCommand}"
                    Width="80"
                    Height="28"
                    IsDefault="True">
                <StackPanel x:Name="stkpBtnOK"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgOK"
                               Fill="{DynamicResource OK}"
                               Height="20"
                               Width="20" />
                    <TextBlock x:Name="txtblOK"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Style="{DynamicResource ButtonTextBlock}"
                               Text="OK"
                               TextWrapping="NoWrap" />
                </StackPanel>
            </Button>
            <Button x:Name="btnCancel"
                    Command="{Binding CancelCommand}"
                    Width="80"
                    Height="28"
                    Margin="10,0,0,0"
                    IsCancel="True">
                <StackPanel x:Name="stkpBtnCancel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgCancel"
                               Width="20"
                               Height="20"
                               Fill="{DynamicResource Cancel}" />
                    <TextBlock x:Name="txtblExit"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Style="{DynamicResource ButtonTextBlock}"
                               Text="Cancel"
                               TextWrapping="NoWrap" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>