                              Height="25"
                              Content="Button"
                              Canvas.Left="104.7"
                              Canvas.Top="61.205"
                              IsChecked="{Binding FingerID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=1}"
                              RenderTransformOrigin="0.5,0.5">
                    <ToggleButton.RenderTransform>
