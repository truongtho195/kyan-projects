                              Canvas.Top="2"
                              IsChecked="{Binding FingerID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=3}">
                    <ToggleButton.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="6.772" />
                            <TranslateTransform />
                        </TransformGroup>
                    </ToggleButton.RenderTransform>
                </ToggleButton>
                <ToggleButton x:Name="btnRightForeFinger"
                              Style="{DynamicResource RemarkChooseFingerBtn}"
                              Width="15"
                              Height="25"
                              Content="Button"
                              Canvas.Left="159"
                              Canvas.Top="6"
                              IsChecked="{Binding FingerID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=2}" />
                <ToggleButton x:Name="btnRightThumbFinger"
                              Style="{DynamicResource RemarkChooseFingerBtn}"
                              Width="13"
                              Height="25"
                              Content="Button"
                              RenderTransformOrigin="0.5,0.5"
                              Canvas.Left="130.7"
                              Canvas.Top="61.205"
                              IsChecked="{Binding FingerID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=1}">
                    <ToggleButton.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="-35.852" />
                            <TranslateTransform />
                        </TransformGroup>
                    </ToggleButton.RenderTransform>
                </ToggleButton>
                <Rectangle Fill="{DynamicResource UserControlBackground}"
                           Width="125"
                           VerticalAlignment="Top"
                           Height="160">
                    <Rectangle.Style>
                        <Style TargetType="{x:Type Rectangle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLeft}"
                                             Value="True">
                                    <Setter Property="Margin"
                                            Value="125 0 0 0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>
            </Canvas>
            <Grid x:Name="grdConfirmation"
                  HorizontalAlignment="Left"
                  Margin="259,25,0,0"
                  VerticalAlignment="Top"
                  Width="80"
                  Height="160">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
