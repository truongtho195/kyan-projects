                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="34.833" />
                            <TranslateTransform />
                        </TransformGroup>
                    </ToggleButton.RenderTransform>
                </ToggleButton>
                <ToggleButton x:Name="btnRightLittleFinger"
                              Style="{DynamicResource RemarkChooseFingerBtn}"
                              Width="13"
                              Height="25"
                              Content="Button"
                              RenderTransformOrigin="0.5,0.5"
                              Canvas.Left="234.9"
                              Canvas.Top="36.5"
                              IsChecked="{Binding FingerID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=5}">
                    <ToggleButton.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="21.486" />
                            <TranslateTransform />
                        </TransformGroup>
                    </ToggleButton.RenderTransform>
                </ToggleButton>
                <ToggleButton x:Name="btnRightAnonymousFinger"
                              Style="{DynamicResource RemarkChooseFingerBtn}"
                              Width="14.51"
                              Height="25"
                              Content="Button"
                              RenderTransformOrigin="0.5,0.5"
                              Canvas.Left="211.8"
                              Canvas.Top="8.9"
                              IsChecked="{Binding FingerID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=4}">
                    <ToggleButton.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="9.871" />
                            <TranslateTransform />
                        </TransformGroup>
                    </ToggleButton.RenderTransform>
                </ToggleButton>
                <ToggleButton x:Name="btnRightMiddleFinger"
