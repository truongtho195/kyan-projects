<UserControl x:Class="CPC.POS.View.VendorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:addressControl="clr-namespace:CPCToolkitExt.AddressControl;assembly=CPCToolkitExt"
             xmlns:behavior="clr-namespace:CPC.Toolkit.Behavior"
             xmlns:control="clr-namespace:Xceed.Wpf.Toolkit;assembly=WPFToolkit.Extended"
             xmlns:converter="clr-namespace:CPC.Converter"
             xmlns:cpcControl="clr-namespace:CPC.Control"
             xmlns:cpcTabControl="clr-namespace:CPCToolkitExt.OtherControl;assembly=CPCToolkitExt"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dataGridControl="clr-namespace:CPCToolkitExt.DataGridControl;assembly=CPCToolkitExt"
             xmlns:helper="clr-namespace:CPC.Helper"
             xmlns:local="clr-namespace:CPC.POS"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Luna"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             xmlns:textBoxControl="clr-namespace:CPCToolkitExt.TextBoxControl;assembly=CPCToolkitExt"
             x:Name="vendorView"
             Background="{DynamicResource UserControlBackground}"
             mc:Ignorable="d">
    <!--
        helper:ValidationHelper.IsEnabled="True"
        helper:ValidationHelper.IsValid="{Binding IsValid, Mode=OneWayToSource}"
    -->
    <UserControl.Resources>
        <!--  Converter  -->
        <converter:IntegerToBooleanConverter x:Key="integerToBooleanConverter" />
        <converter:ComboxItemToTextConverter x:Key="comboxItemToTextConverter" />
        <converter:StringFormatConverter x:Key="stringFormatConverter" />
        <converter:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <converter:BooleanToIntegerConverter x:Key="booleanToIntegerConverter" />
        <converter:EnumToBoolConverter x:Key="enumToBoolConverter" />
        <converter:EnumToCollapsedConverter x:Key="enumToCollapsedConverter" />
        <converter:StringToImageSourceConverter x:Key="stringToImageSourceConverter" />
        <!--  RowDetailsTemplateVendorSearch  -->
        <DataTemplate x:Key="RowDetailsTemplateVendorSearch">
            <Grid x:Name="Layout1"
                  VerticalAlignment="Top">
                <ScrollViewer x:Name="svRowDetailOTTemplate"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              VerticalScrollBarVisibility="Disabled">
                    <Grid x:Name="grdOTTemplate"
                          Background="{DynamicResource Datagrid_RowDetailTemplate_Background1}">
                        <Border x:Name="brdOTrTemplate"
                                Margin="15"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                BorderBrush="White"
                                BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0.5,0"
                                                     EndPoint="0.5,1">
                                    <GradientStop Offset="1"
                                                  Color="#FF262626" />
                                    <GradientStop Offset="0.541"
                                                  Color="#FF333333" />
                                    <GradientStop Offset="0.004"
                                                  Color="Black" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid x:Name="grdTemplateCustomer">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="105" />
                                    <!--  <ColumnDefinition Width="200" />  -->
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="10" />
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="txtblTemplateAccountNo"
                                           Grid.Row="1"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Account #:" />
                                <TextBlock x:Name="txtblBindingTemplateAccountNo"
                                           Grid.Row="1"
                                           Grid.Column="2"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding GuestNo, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateStatus"
                                           Grid.Row="2"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Status:" />
                                <TextBlock x:Name="txtblBindingTemplateStatus"
                                           Grid.Row="2"
                                           Grid.Column="2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding IsActived, ConverterParameter=Status, Converter={StaticResource comboxItemToTextConverter}, Mode=OneWay}" />
                                <!--
                                    <Rectangle x:Name="imgVendor"
                                    Grid.Row="2"
                                    Grid.RowSpan="4"
                                    Width="100"
                                    Height="100"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Fill="{DynamicResource Vendor}" />
                                    <Image x:Name="imgVendor"
                                    Grid.Row="2"
                                    Grid.RowSpan="4"
                                    Width="100"
                                    Height="100"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Source="{Binding PhotoDefault.ImagePath}" />
                                -->
                                <Grid x:Name="grdPhotoDefault"
                                      Grid.Row="2"
                                      Grid.RowSpan="4"
                                      Width="100"
                                      Height="100"
                                      Margin="10,0,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top">
                                    <!--  "Visibility" IsNew = True => empty image, show this image  -->
                                    <Rectangle x:Name="imgCustomer"
                                               Width="100"
                                               Height="100"
                                               Fill="{DynamicResource Administrator}"
                                               Visibility="{Binding PhotoDefault.IsNew, Converter={StaticResource boolToVisibilityConverter}, ConverterParameter=True}" />
                                    <!--  Visibility IsNew = False => has image in database, show this image  -->
                                    <Image x:Name="imgDefault"
                                           Width="100"
                                           Height="100"
                                           Source="{Binding PhotoDefault.ImagePath, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource stringToImageSourceConverter}}"
                                           Stretch="Fill"
                                           Visibility="{Binding PhotoDefault.IsNew, Converter={StaticResource boolToVisibilityConverter}, ConverterParameter=False}" />
                                </Grid>
                                <TextBlock x:Name="txtblTemplateFirstName"
                                           Grid.Row="3"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="First Name:" />
                                <TextBlock x:Name="txtblBindingTemplateFirstName"
                                           Grid.Row="3"
                                           Grid.Column="2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding FirstName, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateLastName"
                                           Grid.Row="4"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Last Name:" />
                                <TextBlock x:Name="txtblBindingTemplateLastName"
                                           Grid.Row="4"
                                           Grid.Column="2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding LastName, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateCompany"
                                           Grid.Row="5"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Company:" />
                                <TextBlock x:Name="txtblBindingTemplateCompany"
                                           Grid.Row="5"
                                           Grid.Column="2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Company, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateJobTitle"
                                           Grid.Row="6"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Job Title:" />
                                <TextBlock x:Name="txtblBindingTemplateJobTitle"
                                           Grid.Row="6"
                                           Grid.Column="2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding PositionId, ConverterParameter=JobTitle, Converter={StaticResource comboxItemToTextConverter}, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateStreet"
                                           Grid.Row="1"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Street:" />
                                <TextBlock x:Name="txtblBindingTemplateStreet"
                                           Grid.Row="1"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding AddressModel.AddressLine1, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateCity"
                                           Grid.Row="2"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="City:" />
                                <TextBlock x:Name="txtblBindingTemplateCity"
                                           Grid.Row="2"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding AddressModel.City, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateState"
                                           Grid.Row="3"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="State:" />
                                <TextBlock x:Name="txtblBindingTemplateState"
                                           Grid.Row="3"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding AddressModel.StateProvinceId, ConverterParameter=States, Converter={StaticResource comboxItemToTextConverter}, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateZipCode"
                                           Grid.Row="4"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Zip Code:" />
                                <TextBlock x:Name="txtblBindingTemplateZipCode"
                                           Grid.Row="4"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding AddressModel.PostalCode, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateCountry"
                                           Grid.Row="5"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Country:" />
                                <TextBlock x:Name="txtblBindingTemplateCountry"
                                           Grid.Row="5"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding AddressModel.CountryId, ConverterParameter=Country, Converter={StaticResource comboxItemToTextConverter}, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplatePhone"
                                           Grid.Row="6"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Phone:" />
                                <TextBlock x:Name="txtblBindingTemplatePhone"
                                           Grid.Row="6"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Phone1, ConverterParameter=Phone, Converter={StaticResource stringFormatConverter}, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateCellphone"
                                           Grid.Row="1"
                                           Grid.Column="5"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Cellphone:" />
                                <TextBlock x:Name="txtblBindingTemplateCellphone"
                                           Grid.Row="1"
                                           Grid.Column="6"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding CellPhone, ConverterParameter=Phone, Converter={StaticResource stringFormatConverter}, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateEmail"
                                           Grid.Row="2"
                                           Grid.Column="5"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Email:" />
                                <TextBlock x:Name="txtblBindingTemplateEmail"
                                           Grid.Row="2"
                                           Grid.Column="6"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Email, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateWebsite"
                                           Grid.Row="3"
                                           Grid.Column="5"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Website:" />
                                <TextBlock x:Name="txtblBindingTemplateWebsite"
                                           Grid.Row="3"
                                           Grid.Column="6"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Website, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateStartDate"
                                           Grid.Row="4"
                                           Grid.Column="5"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Start Date:" />
                                <TextBlock x:Name="txtblBindingTemplateStartDate"
                                           Grid.Row="4"
                                           Grid.Column="6"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding DateCreated, Mode=OneWay, StringFormat=d}" />
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </DataTemplate>
        <!--  ProductVendorRowDetailsTemplate  -->
        <DataTemplate x:Key="ProductVendorRowDetailsTemplate">
            <Grid x:Name="Layout1"
                  Margin="0"
                  VerticalAlignment="Top">
                <ScrollViewer x:Name="svRowDetailOTTemplate"
                              Width="Auto"
                              Height="Auto"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              VerticalScrollBarVisibility="Disabled">
                    <Grid x:Name="grdOTTemplate"
                          Height="Auto"
                          Background="{DynamicResource Datagrid_RowDetailTemplate_Background1}">
                        <Border x:Name="brdOTrTemplate"
                                Margin="15"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{DynamicResource Datagrid_RowDetailTemplate_Background2}"
                                BorderBrush="{DynamicResource Datagrid_RowDetailTemplate_Border}"
                                BorderThickness="1">
                            <Grid x:Name="grdTemplateProductVendor"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*"
                                                      MinWidth="150" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="10" />
                                </Grid.RowDefinitions>
                                <!--
                                    <Image Grid.RowSpan="6"
                                    Width="120"
                                    Height="100"
                                    Margin="29,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Source="/POS;component/Image/Shoes.png"
                                    Stretch="Uniform" />
                                -->
                                <Grid x:Name="grdProductPhotoDefault"
                                      Grid.RowSpan="6"
                                      Width="120"
                                      Height="100"
                                      Margin="29,0,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center">
                                    <!--  "Visibility" IsNew = True => empty image, show this image  -->
                                    <Rectangle x:Name="imgCustomer"
                                               Width="100"
                                               Height="100"
                                               Fill="{DynamicResource Product}"
                                               Visibility="{Binding PhotoDefault.IsNew, Converter={StaticResource boolToVisibilityConverter}, ConverterParameter=True}" />
                                    <!--  Visibility IsNew = False => has image in database, show this image  -->
                                    <Image x:Name="imgProductPhotoDefault"
                                           Width="100"
                                           Height="100"
                                           Source="{Binding PhotoDefault.ImagePath, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource stringToImageSourceConverter}}"
                                           Stretch="Fill"
                                           Visibility="{Binding PhotoDefault.IsNew, Converter={StaticResource boolToVisibilityConverter}, ConverterParameter=False}" />
                                </Grid>
                                <TextBlock x:Name="txtblTemplateItem"
                                           Grid.Row="1"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Item:" />
                                <TextBlock x:Name="txtblBindingTemplateItem"
                                           Grid.Row="1"
                                           Grid.Column="2"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Code, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplatePartNo"
                                           Grid.Row="1"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Part #:" />
                                <TextBlock x:Name="txtblBindingTemplatePartNo"
                                           Grid.Row="1"
                                           Grid.Column="4"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding PartNumber, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateAttribute"
                                           Grid.Row="2"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Attribute:" />
                                <TextBlock x:Name="txtblBindingTemplateAttribute"
                                           Grid.Row="2"
                                           Grid.Column="2"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Attribute, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateSize"
                                           Grid.Row="2"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Size:" />
                                <TextBlock x:Name="txtblBindingTemplateSize"
                                           Grid.Row="2"
                                           Grid.Column="4"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Size, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateDescription"
                                           Grid.Row="3"
                                           Grid.Column="1"
                                           Margin="0,5.861,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Description:" />
                                <TextBlock x:Name="txtblBindingTemplateDescription"
                                           Grid.Row="3"
                                           Grid.Column="2"
                                           Grid.ColumnSpan="3"
                                           Margin="0,5.861,0,0"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Top"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Description, Mode=OneWay}"
                                           TextTrimming="WordEllipsis"
                                           TextWrapping="Wrap"
                                           d:LayoutOverrides="GridBox" />
                                <TextBlock x:Name="txtblTemplatePrice"
                                           Grid.Row="4"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Price:" />
                                <TextBlock x:Name="txtblBindingTemplateCost"
                                           Grid.Row="4"
                                           Grid.Column="2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding RegularPrice, Mode=OneWay, StringFormat=c}" />
                                <TextBlock x:Name="txtblTemplateBaseUnit"
                                           Grid.Row="4"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Base Unit:" />
                                <TextBlock x:Name="txtblBindingTemplateBaseUnit"
                                           Grid.Row="4"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding UOMName, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateQuantity"
                                           Grid.Row="5"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Quantity:" />
                                <TextBlock x:Name="txtblBindingTemplateQuantity"
                                           Grid.Row="5"
                                           Grid.Column="2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding OnHandStore1, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateTax"
                                           Grid.Row="5"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Tax:" />
                                <TextBlock x:Name="txtblBindingTemplateTax"
                                           Grid.Row="5"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding TaxCode, Mode=OneWay}" />
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </DataTemplate>
        <s:Int32 x:Key="PaymentTermDescriptionMaxLength">50</s:Int32>
    </UserControl.Resources>
    <Grid x:Name="grdLayout">
        <Rectangle x:Name="UserControl_Background_Image"
                   Fill="{DynamicResource UserControl_Background_Image}" />
        <control:BusyIndicator IsBusy="{Binding IsBusy}">
            <Grid x:Name="grdVendor">
                <!--
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                -->
                <Grid x:Name="grdSearch"
                      d:IsHidden="True">
                    <Grid.Visibility>
                        <Binding Path="IsSearchMode"
                                 Mode="OneWay"
                                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.Converter>
                                <converter:BoolToVisibilityConverter FalseToVisibility="Collapsed" />
                            </Binding.Converter>
                        </Binding>
                    </Grid.Visibility>
                    <Grid x:Name="grdContentSearch"
                          Grid.Row="1"
                          Margin="0,0,15,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="87" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <GroupBox x:Name="gbSearch"
                                  Margin="10,10,0,0">
                            <GroupBox.Header>
                                <TextBlock x:Name="txtblSearch"
                                           Style="{DynamicResource GroupboxTextBlock}"
                                           Text="Search" />
                            </GroupBox.Header>
                            <Grid x:Name="grdgbSearch"
                                  Margin="0,4,0,0">
                                <Grid x:Name="grdgbContentSearch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <control:WatermarkTextBox x:Name="txtKeyword"
                                                              Margin="10,2"
                                                              VerticalContentAlignment="Center"
                                                              Padding="20,0,2,0"
                                                              Text="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              TextWrapping="NoWrap"
                                                              Watermark="Keyword">
                                        <control:WatermarkTextBox.InputBindings>
                                            <KeyBinding Key="Enter"
                                                        Command="{Binding SearchCommand}"
                                                        CommandParameter="{Binding Path=Text, ElementName=txtKeyword}" />
                                        </control:WatermarkTextBox.InputBindings>
                                    </control:WatermarkTextBox>
                                    <Rectangle x:Name="imgFind"
