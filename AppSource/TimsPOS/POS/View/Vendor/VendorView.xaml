                                            <DataGridTextColumn Header="Description"
                                                                Binding="{Binding Description, Mode=OneWay}"
                                                                Width="250" />
                                            <DataGridTextColumn Header="Attribute"
                                                                Binding="{Binding Attribute, Mode=OneWay}"
                                                                Width="80" />
                                            <DataGridTextColumn Header="Size"
                                                                Binding="{Binding Size, Mode=OneWay}"
                                                                Width="80" />
                                            <DataGridTextColumn Header="Barcode"
                                                                Binding="{Binding Barcode, Mode=OneWay}"
                                                                Width="100" />
                                            <DataGridTemplateColumn Header="Regular Price"
                                                                    Width="120">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   Text="{Binding RegularPrice, Mode=OneWay, StringFormat=c}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </dataGridControl:DataGridControl.Columns>
                                    </dataGridControl:DataGridControl>
                                </Grid>
                            </TabItem>
                            <TabItem x:Name="tabitemPOHistory"
                                     Header="PO History">
                                <Grid x:Name="grdContentPOHistory">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="5" />
                                    </Grid.RowDefinitions>
                                    <dataGridControl:DataGridControl x:Name="dtgrdPOHistory"
                                                                     Grid.Row="1"
                                                                     Margin="5,5,5,0"
                                                                     AutoGenerateColumns="False"
                                                                     CanUserAddRows="False"
                                                                     IsPaging="False"
                                                                     IsReadOnly="True"
                                                                     IsRollBackData="False"
                                                                     ItemsSource="{Binding SelectedVendor.PurchaseOrderCollection}"
                                                                     Style="{DynamicResource DatagridWithRowHeader}"
                                                                     VisibilityNavigationBar="Collapsed">
                                        <dataGridControl:DataGridControl.Columns>
                                            <DataGridTextColumn Header="Order #"
                                                                Binding="{Binding PurchaseOrderNo, Mode=OneWay}"
                                                                Width="100" />
                                            <DataGridTextColumn Header="Order Date"
                                                                Binding="{Binding PurchasedDate, Mode=OneWay, StringFormat={x:Static local:Define.DateFormat}}"
                                                                Width="70" />
                                            <DataGridTextColumn Header="Status"
                                                                Binding="{Binding Status, ConverterParameter=PurchaseStatus, Converter={StaticResource comboxItemToTextConverter}, Mode=OneWay}"
                                                                Width="*" />
                                            <DataGridTemplateColumn Header="Total"
                                                                    Width="120">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   Text="{Binding Total, Mode=OneWay, StringFormat=c}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Paid"
                                                                    Width="120">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   Text="{Binding Paid, Mode=OneWay, StringFormat=c}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Balance"
                                                                    Width="120">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   Text="{Binding Balance, Mode=OneWay, StringFormat=c}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </dataGridControl:DataGridControl.Columns>
                                    </dataGridControl:DataGridControl>
                                    <Grid x:Name="grdDatagridBottomPOHistory"
                                          Grid.Row="2"
                                          Height="25"
                                          Margin="5,0"
                                          VerticalAlignment="Bottom"
                                          d:LayoutOverrides="GridBox">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="16" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border x:Name="brdPOHistoryBackground"
                                                Grid.ColumnSpan="8"
                                                Background="{DynamicResource DatagridBottomBackground}"
                                                BorderBrush="{DynamicResource DatagridBottomBorder}"
                                                BorderThickness="1,0,1,1" />
                                        <TextBlock x:Name="txtblTotalPaidBalance"
                                                   Grid.Column="3"
                                                   Margin="0,0,10,0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   RenderTransformOrigin="0.5,0.5"
                                                   Style="{DynamicResource TextBlockDatagridBottom}"
                                                   Text="M"
                                                   TextWrapping="NoWrap">
                                            <TextBlock.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform />
                                                    <SkewTransform />
                                                    <RotateTransform Angle="-90" />
                                                    <TranslateTransform />
                                                </TransformGroup>
                                            </TextBlock.RenderTransform>
                                        </TextBlock>
                                        <TextBlock x:Name="txtblBindingTotal"
                                                   Grid.Column="4"
                                                   Margin="0,0,5,0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource TextBlockDatagridBottom}"
                                                   Text="{Binding TotalPurchaseOrder.Total, Mode=OneWay, StringFormat=c}"
                                                   TextWrapping="NoWrap" />
                                        <TextBlock x:Name="txtblBindingPaid"
                                                   Grid.Column="5"
                                                   Margin="0,0,5,0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource TextBlockDatagridBottom}"
                                                   Text="{Binding TotalPurchaseOrder.Paid, Mode=OneWay, StringFormat=c}"
                                                   TextWrapping="NoWrap" />
                                        <TextBlock x:Name="txtblBindingBalance"
                                                   Grid.Column="6"
                                                   Margin="0,0,5,0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource TextBlockDatagridBottom}"
                                                   Text="{Binding TotalPurchaseOrder.Balance, Mode=OneWay, StringFormat=c}"
                                                   TextWrapping="NoWrap" />
                                    </Grid>
                                </Grid>
                            </TabItem>
                        </cpcTabControl:CPCTabControl>
                    </Grid>
                </Grid>
            </Grid>
        </control:BusyIndicator>
    </Grid>
</UserControl>