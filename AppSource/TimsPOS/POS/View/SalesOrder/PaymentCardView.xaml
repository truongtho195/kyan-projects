                        <DataGridTemplateColumn Header="Methods"
						
                                                IsReadOnly="true" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="btnCash"
                                            Grid.Column="1"
                                            FontSize="12"
                                            Style="{DynamicResource ButtonDatagridPayment}">
                                        <StackPanel x:Name="stkpCash"
                                                    Orientation="Horizontal">
                                            <Rectangle x:Name="imgCash"
                                                       Width="28"
                                                       Height="28">
                                                <Rectangle.Fill>
                                                    <Binding ConverterParameter="PaymentCard"
                                                             Mode="OneWay"
                                                             Path=".">
                                                        <!--  Payment Card  -->
                                                        <Binding.Converter>
                                                            <converter:PaymentButtonIconConverter />
                                                        </Binding.Converter>
                                                    </Binding>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock x:Name="txtblCash"
                                                       Margin="5,0,0,0"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Center"
                                                       Style="{DynamicResource ButtonDatagridTextBlockPayment}"
                                                       Text="{Binding CardName}"
                                                       TextWrapping="NoWrap" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*"
                                                MinWidth="100"
                                                CellStyle="{DynamicResource DataGridCellDisableStyle}"
                                                Header="Amount">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Right"
                                               Text="{Binding Paid,StringFormat={x:Static local:Define.CurrencyFormat}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <cpcTextBox:TextBoxMoney x:Name="txtPaid"
                                                             HorizontalAlignment="Right"
                                                             cpcBehavior:DataGridCellFocusHelper.Command="{Binding DataContext.FillMoneyCommand,RelativeSource={RelativeSource AncestorType={x:Type UserControl},
                                                                       Mode=FindAncestor}}"
                                                             Style="{DynamicResource TextBoxMoneyInsideDataGridStyle}"
                                                             MinWidth="50"
                                                             Value="{Binding Paid, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                         <DataGridTemplateColumn Width="*"
                                                MinWidth="100"
                                                Visibility="{Binding Path=Data.SelectedPaymentModel.IsCreditCard,Source={StaticResource bindingHelper} , Mode=OneWay,Converter={StaticResource boolToVisibilityConverter}}"
                                                Header="Tip">
                         
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Right"
                                               Text="{Binding Tip,StringFormat={x:Static local:Define.PercentFormat}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <cpcTextBox:TextBoxNumeric x:Name="txtTip"
                                                             HorizontalAlignment="Right"
                                                             MinWidth="50"
                                                               Style="{DynamicResource TextBoxNumericInsideDataGridStyle}"
                                                               Text="{Binding Tip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <!--PercentFormat-->
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="100"
