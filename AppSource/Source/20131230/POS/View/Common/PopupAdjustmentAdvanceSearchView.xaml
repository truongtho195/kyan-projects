<UserControl x:Class="CPC.POS.View.PopupAdjustmentAdvanceSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behavior="clr-namespace:CPC.Toolkit.Behavior"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helper="clr-namespace:CPC.Helper"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:textBoxControl="clr-namespace:CPCToolkitExt.TextBoxControl;assembly=CPCToolkitExt"
             Width="548"
             Height="207">
    <UserControl.Resources />
    <Grid x:Name="grdAdjustmentAdvanceSearch">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Border x:Name="brdContentAdjustmentAdvanceSearch"
                Margin="15,20,15,15"
                Background="{DynamicResource TabControlBackground}"
                BorderBrush="{DynamicResource TabControlBorder}"
                BorderThickness="1">
            <Grid x:Name="grdContentAdjustmentAdvanceSearch"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="71" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="txtblCode"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Code"
                           TextWrapping="NoWrap" />
                <textBoxControl:TextBox x:Name="txtCode"
                                        Grid.Column="1"
                                        Margin="0,2,10,2"
                                        Padding="2,0,2,0"
                                        Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="NoWrap">
                    <i:Interaction.Behaviors>
                        <behavior:AutoFocusBehavior />
                    </i:Interaction.Behaviors>
                </textBoxControl:TextBox>
                <TextBlock x:Name="txtblName"
                           Grid.Column="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Name"
                           TextWrapping="NoWrap" />
                <textBoxControl:TextBox x:Name="txtName"
                                        Grid.Column="3"
                                        Margin="0,2,10,2"
                                        Padding="2,0,2,0"
                                        Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="NoWrap" />
                <TextBlock x:Name="txtblAttribute"
                           Grid.Row="1"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Attribute"
                           TextWrapping="NoWrap" />
                <textBoxControl:TextBox x:Name="txtAttribute"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,2,10,2"
                                        Padding="2,0,2,0"
                                        Text="{Binding Attribute, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock x:Name="txtblSize"
                           Grid.Row="1"
                           Grid.Column="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Size"
                           TextWrapping="NoWrap" />
                <textBoxControl:TextBox x:Name="txtSize"
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        Margin="0,2,10,2"
                                        Padding="2,0,2,0"
                                        Text="{Binding Size, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock x:Name="txtblBasicStatus"
                           Grid.Row="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Status"
                           TextWrapping="NoWrap" />
                <ComboBox x:Name="cmbBasicStatus"
                          Grid.Row="2"
                          Grid.Column="1"
                          Margin="0,2,10,2"
                          DisplayMemberPath="Text"
                          ItemsSource="{x:Static helper:Common.AdjustmentStatusAll}"
                          SelectedValue="{Binding Status}"
                          SelectedValuePath="Value" />
                <TextBlock x:Name="txtblReason"
                           Grid.Row="2"
                           Grid.Column="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Reason"
                           TextWrapping="NoWrap" />
                <ComboBox x:Name="cmbReason"
                          Grid.Row="2"
                          Grid.Column="3"
                          Margin="0,2,10,2"
                          DisplayMemberPath="Text"
                          ItemsSource="{x:Static helper:Common.AdjustmentReasonAll}"
                          SelectedValue="{Binding Reason}"
                          SelectedValuePath="Value" />
                <TextBlock x:Name="txtblDateFrom"
                           Grid.Row="3"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Date From"
                           TextWrapping="NoWrap" />
                <DatePicker x:Name="dtpDateFrom"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,2,10,2"
                            Background="White"
                            SelectedDate="{Binding FromDate}" />
                <TextBlock x:Name="txtblDateTo"
                           Grid.Row="3"
                           Grid.Column="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Date To"
                           TextWrapping="NoWrap" />
                <DatePicker x:Name="dtpDateTo"
                            Grid.Row="3"
                            Grid.Column="3"
                            Margin="0,2,10,2"
                            Background="White"
                            SelectedDate="{Binding ToDate}" />
            </Grid>
        </Border>
        <Rectangle x:Name="Line"
                   Height="1"
                   Margin="2,0"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Bottom"
                   Fill="{DynamicResource Spilter_Line_Background}" />
        <StackPanel x:Name="stkpBtn"
                    Grid.Row="1"
                    Height="Auto"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Button x:Name="btnOK"
                    Command="{Binding OkCommand}"
                    Width="80"
                    Height="28">
                <StackPanel x:Name="stkpBtnOK"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgOK"
                               Width="20"
                               Height="20"
                               Fill="{DynamicResource OK}" />
                    <TextBlock x:Name="txtblOK"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Style="{DynamicResource ButtonTextBlock}"
                               Text="{DynamicResource Button_Ok}"
                               TextWrapping="NoWrap" />
                </StackPanel>
            </Button>
            <Button x:Name="btnCancel"
                    Command="{Binding CancelCommand}"
                    Width="80"
                    Height="28"
                    Margin="10,0,0,0"
                    IsCancel="True">
                <StackPanel x:Name="stkpBtnCancel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgCancel"
                               Width="20"
                               Height="20"
                               Fill="{DynamicResource Cancel}" />
                    <TextBlock x:Name="txtblExit"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Style="{DynamicResource ButtonTextBlock}"
                               Text="{DynamicResource Button_Cancel}"
                               TextWrapping="NoWrap" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>