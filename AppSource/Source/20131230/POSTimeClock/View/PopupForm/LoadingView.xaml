<Window x:Class="CPC.TimeClock.View.LoadingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoadingView"
        Width="300"
        Height="96"
        AllowsTransparency="True"
        Background="Transparent"
        FontSize="12"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None">
    <Grid>
        <Border x:Name="brdLayoutRoot"
                Background="#FFDFEDFF"
                BorderBrush="#FF3B5A82"
                BorderThickness="5"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="48" />
                </Grid.RowDefinitions>
                <TextBlock Name="textBlock1"
                           Margin="8"
                           FontWeight="Bold"
                           Foreground="Red"
                           Text="Please wait a moment, data is loading!" />
                <ProgressBar Name="progressBar1"
                             Grid.Row="1"
                             Margin="8" />
            </Grid>
        </Border>
    </Grid>
</Window>