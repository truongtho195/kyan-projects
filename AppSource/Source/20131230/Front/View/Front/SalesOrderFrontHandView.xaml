<Window x:Class="CPC.POS.View.SalesOrderFrontHandView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Anno="http://schemas.microsoft.com/expression/blend/extensions/annotations/2008"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Name="UserControl"
        xmlns:converter="clr-namespace:CPC.Converter"
        xmlns:cpcDataGrid="clr-namespace:CPCToolkitExt.DataGridControl;assembly=CPCToolkitExt"
        xmlns:cpcTextBox="clr-namespace:CPCToolkitExt.TextBoxControl;assembly=CPCToolkitExt"
        xmlns:wpfToolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=WPFToolkit.Extended"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:cpcBehavior="clr-namespace:CPC.Toolkit.Behavior"
        xmlns:local="clr-namespace:CPC.POS"
        xmlns:Service="clr-namespace:CPC.Service"
        Service:DialogService.IsRegisteredView="True"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        WindowStartupLocation="CenterScreen"
        Width="820"
        WindowStyle="None"
        Height="528"
        ShowInTaskbar="True"
        Background="{DynamicResource UserControlBackground}"
        mc:Ignorable="d Anno">
    <Window.InputBindings>
        <KeyBinding Key="F10"
                    Command="{Binding ShowOnScreenKeyboardCommand}" />
    </Window.InputBindings>
    <Window.Resources>

        <!--#Region Converter-->
        <converter:IntegerToBooleanConverter x:Key="integerToBooleanConverter" />
        <!--#EndRegion Converter-->

        <!--#Region Style-->
        <Style x:Key="DataGridDetailRowStyle"
               BasedOn="{StaticResource {x:Type DataGridRow}}"
               TargetType="{x:Type DataGridRow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridRow}">
                        <Border x:Name="DGR_Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <SelectiveScrollingGrid>
                                <SelectiveScrollingGrid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </SelectiveScrollingGrid.ColumnDefinitions>
                                <SelectiveScrollingGrid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </SelectiveScrollingGrid.RowDefinitions>
                                <DataGridCellsPresenter Grid.Column="1"
                                                        ItemsPanel="{TemplateBinding ItemsPanel}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                <!--  Visibility="{TemplateBinding DetailsVisibility}">  -->
                                <DataGridDetailsPresenter Grid.Row="1"
                                                          Grid.Column="1"
                                                          SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}">
                                    <DataGridDetailsPresenter.Visibility>
                                        <Binding Path="IsVisibleRowDetail"
                                                 Mode="OneWay">
                                            <Binding.Converter>
                                                <converter:BoolToVisibilityConverter FalseToVisibility="Collapsed" />
                                            </Binding.Converter>
                                        </Binding>
                                    </DataGridDetailsPresenter.Visibility>
                                </DataGridDetailsPresenter>
                                <DataGridRowHeader Grid.RowSpan="2"
                                                   SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                                                   Style="{DynamicResource DataGridRowHeaderStyle}" />
                            </SelectiveScrollingGrid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!--  Set Color for parent item  -->
                <DataTrigger Binding="{Binding ItemType, Converter={StaticResource integerToBooleanConverter}, ConverterParameter=1}"
                             Value="True">

                    <Setter Property="Background"
                            Value="{DynamicResource DatagridRow_Group_Background}" />
                    <Setter Property="FontWeight"
                            Value="Bold" />
                    <Setter Property="Foreground"
                            Value="#FFFF0000" />
                </DataTrigger>
                <!--  Set Color for Children item  -->
                <DataTrigger Binding="{Binding ItemType, Converter={StaticResource integerToBooleanConverter}, ConverterParameter=2}"
                             Value="True">
                    <Setter Property="Background"
                            Value="{DynamicResource DatagridRow_Child_Background}" />

                </DataTrigger>
            </Style.Triggers>
        </Style>
        <!--#EndRegion Style-->
        
        <!--#region DataTemplate-->
        <DataTemplate x:Key="RowDetailDataTemplateSaleOrder">
            <Grid x:Name="grdTemplateCustomer"
                  Height="Auto"
                  Margin="0"
                  Background="{DynamicResource DatagridRow_Child_Background}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1"
                            Grid.Column="1"
                            Orientation="Horizontal">
                    <StackPanel x:Name="stkpDiscount"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <StackPanel.Visibility>
                            <Binding Path="ProductModel.IsCoupon"
                                     Mode="OneWay">
                                <Binding.Converter>
                                    <converter:BoolToVisibilityConverter FalseToVisibility="Visible" />
                                </Binding.Converter>
                            </Binding>
                        </StackPanel.Visibility>
                        <TextBlock x:Name="txtblTemplatePrice"
                                   Margin="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="Red"
                                   Text="Regular Price:"
                                   TextWrapping="NoWrap" />
                        <TextBlock x:Name="txtblBindingRegularPrice"
                                   Margin="5,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="Red"
                                   Text="{Binding RegularPrice, Mode=OneWay, ConverterCulture={x:Static local:Define.ConverterCulture}, StringFormat={x:Static local:Define.CurrencyFormat}}"
                                   TextWrapping="NoWrap" />
                        <TextBlock x:Name="txtblUnitDiscount"
                                   Margin="20,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="Red"
                                   Text="Unit Discount:"
                                   TextWrapping="NoWrap" />
                        <TextBlock x:Name="txtblBindingUnitDiscount"
                                   Margin="5,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="Red"
                                   Text="{Binding UnitDiscount, ConverterCulture={x:Static local:Define.ConverterCulture}, StringFormat={x:Static local:Define.CurrencyFormat}}"
                                   TextWrapping="NoWrap" />
                        <TextBlock x:Name="txtblTotalDiscount"
                                   Margin="20,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="Red"
                                   Text="Total Discount:"
                                   TextWrapping="NoWrap" />
                        <TextBlock x:Name="txtblBindingTotalDiscount"
                                   Margin="5,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="Red"
                                   Text="{Binding TotalDiscount, ConverterCulture={x:Static local:Define.ConverterCulture}, StringFormat={x:Static local:Define.CurrencyFormat}}"
                                   TextWrapping="NoWrap" />
                    </StackPanel>
                    <StackPanel x:Name="stkSerial"
                                Height="25"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <StackPanel.Visibility>
                            <Binding Path="ProductModel.IsCoupon"
                                     Mode="OneWay">
                                <Binding.Converter>
                                    <converter:BoolToVisibilityConverter FalseToVisibility="Visible" />
                                </Binding.Converter>
                            </Binding>
                        </StackPanel.Visibility>
                        <TextBlock x:Name="txtblTemplateSerialNo"
                                   Margin="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="#FF0010FF"
                                   Text="S/N: "
                                   TextDecorations="Underline"
                                   TextWrapping="NoWrap" />
                        <TextBlock x:Name="txSerial"
                                   Margin="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="#FF0010FF"
                                   Text="{Binding SerialTrackingDisplay, Mode=OneWay}"
                                   TextDecorations="Underline"
                                   TextWrapping="NoWrap" />
                    </StackPanel>
                    <StackPanel x:Name="stkCoupon"
                                Height="25"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <StackPanel.Visibility>
                            <Binding Path="ProductModel.IsCoupon"
                                     Mode="OneWay">
                                <Binding.Converter>
                                    <converter:BoolToVisibilityConverter FalseToVisibility="Collapsed" />
                                </Binding.Converter>
                            </Binding>
                        </StackPanel.Visibility>
                        <TextBlock x:Name="txtblTemplateCoupon"
                                   Margin="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="#FF0010FF"
                                   TextDecorations="Underline"
                                   TextWrapping="NoWrap">
                            <Run Text="{Binding ItemName, Mode=OneWay}" /> <Run Text=":" />
                        </TextBlock>
                        <TextBlock x:Name="txCoupon"
                                   Margin="0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="#FF0010FF"
                                   Text="{Binding SerialTracking, Mode=OneWay}"
                                   TextDecorations="Underline"
                                   TextWrapping="NoWrap" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding SerialTracking}"
                             Value="{x:Static sys:String.Empty}">
                    <Setter TargetName="stkSerial"
                            Property="Visibility"
                            Value="Collapsed" />
                </DataTrigger>
                <DataTrigger Binding="{Binding DiscountPercent}"
                             Value="0">
                    <Setter TargetName="stkpDiscount"
                            Property="Visibility"
                            Value="Collapsed" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <!--#Endregion DataTemplate  -->
    </Window.Resources>

    <Grid x:Name="GridLayout">
        <Rectangle x:Name="UserControl_Background_Image"
                   Fill="{DynamicResource UserControl_Background_Image}" />
        <Border x:Name="brdFontHand"
                Margin="10"
                Background="#19FFFFFF"
                BorderBrush="{DynamicResource TabControlBorder}"
                BorderThickness="1">
            <Grid x:Name="grdFontHand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>
                <Grid x:Name="grdSubSalesOrder">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="72" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Border x:Name="brdCustomerBarCode"
                            Background="#33FFFFFF"
                            BorderBrush="{DynamicResource TabControlBorder}"
                            BorderThickness="0,0,0,1">
                        <Grid x:Name="grdCustomerBarCode"
                              Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25" />
                                <RowDefinition Height="25" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="84" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="260" />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="txtblCustomer"
                                       Margin="10,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="13.333"
                                       FontWeight="Bold"
                                       Style="{DynamicResource TextBlockNormal}"
                                       Text="Customer"
                                       TextWrapping="NoWrap"
                                       d:LayoutOverrides="GridBox" />
                            <ComboBox x:Name="cmbCustomer"
                                      Grid.Column="1"
                                      Margin="0,2"
                                      ItemsSource="{Binding CustomerCollection}"
                                      DisplayMemberPath="LegalName"
                                      SelectedValuePath="Resource"
                                      SelectedItem="{Binding SelectedCustomer,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      VerticalAlignment="Stretch" />
                            <TextBlock x:Name="txtblBarcode"
                                       Grid.Row="1"
                                       Margin="10,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="13.333"
                                       FontWeight="Bold"
                                       Style="{DynamicResource TextBlockNormal}"
                                       Text="Barcode"
                                       TextWrapping="NoWrap"
                                       d:LayoutOverrides="GridBox" />
                            <wpfToolkit:WatermarkTextBox x:Name="txtBarcode"
                                                         Grid.Row="1"
                                                         Grid.Column="1"
                                                         Height="21"
                                                         Margin="0"
                                                         VerticalAlignment="Center"
                                                         FontSize="12"
                                                         FontWeight="Bold"
                                                         Padding="2,0,2,0"
                                                         Text="{Binding BarcodeProduct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         TextWrapping="NoWrap"
                                                         Watermark="Input barcode and press enter"
                                                         VerticalContentAlignment="Center">
                                <i:Interaction.Behaviors>
                                    <cpcBehavior:AutoFocusBehavior />
                                </i:Interaction.Behaviors>
                                <wpfToolkit:WatermarkTextBox.InputBindings>
                                    <KeyBinding Key="Enter"
                                                Command="{Binding SearchProductCommand}" />
                                </wpfToolkit:WatermarkTextBox.InputBindings>
                            </wpfToolkit:WatermarkTextBox>
                            <TextBlock x:Name="txtblBindingUsername"
                                       Grid.Column="3"
                                       Margin="0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="14.667"
                                       Style="{DynamicResource TextBlockScheduleTitle}"
                                       Text="{Binding SelectedCustomer.LegalName,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap" />
                            <TextBlock x:Name="txtblBindingDate"
                                       Grid.Row="1"
                                       Grid.Column="3"
                                       Margin="0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Style="{DynamicResource TextBlockScheduleTitle}"
                                       Text="{Binding CurrentDateTime,StringFormat={}{0:dddd, MMMM yyyy h:mm:ss tt}}"
                                       TextWrapping="Wrap" />
                        </Grid>

                    </Border>
                    <Grid x:Name="grdList"
                          Grid.Row="1"
                          Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="99" />
                        </Grid.RowDefinitions>
                        <Grid x:Name="grdContentList"
                              Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="60" />
                            </Grid.ColumnDefinitions>
                            <cpcDataGrid:DataGridControl x:Name="dtgrdOrder"
                                                         ColumnHeaderHeight="40"
                                                         HorizontalScrollBarVisibility="Hidden"
                                                         IsSynchronizedWithCurrentItem="True"
                                                         ItemsSource="{Binding SelectedSaleOrder.SaleOrderDetailCollection}"
                                                         VerticalScrollBarVisibility="Disabled"
                                                         AutoGenerateColumns="False"
                                                         CanUserAddRows="False"
                                                         IsReadOnly="True"
                                                         RowDetailsTemplate="{DynamicResource RowDetailDataTemplateSaleOrder}"
                                                         RowDetailsVisibilityMode="Visible"
                                                         RowStyle="{DynamicResource DataGridDetailRowStyle}"
                                                         SelectedItem="{Binding SelectedSaleOrderDetail,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                         CanUserDeleteRows="False"
                                                         Style="{DynamicResource DatagridWithRowHeader}">
                                <cpcDataGrid:DataGridControl.Columns>
                                    <DataGridTextColumn Width="100"
                                                        Header="Item Code"
                                                        Binding="{Binding ItemCode}" />
                                    <DataGridTextColumn Width="*"
                                                        Header="Item Name"
                                                        Binding="{Binding ItemName}" />
                                    <DataGridTextColumn Width="75"
                                                        Header="Quantity"
                                                        Binding="{Binding Quantity, ConverterCulture={x:Static local:Define.ConverterCulture}, Mode=OneWay, StringFormat={x:Static local:Define.NumericFormat}}" />
                                    <DataGridTextColumn Width="80"
                                                        Header="Price"
                                                        Binding="{Binding SalePrice, ConverterCulture={x:Static local:Define.ConverterCulture}, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}}" />
                                    <DataGridTextColumn Width="80"
                                                        Header="Amount"
                                                        Binding="{Binding SubTotal, ConverterCulture={x:Static local:Define.ConverterCulture}, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}}" />
                                </cpcDataGrid:DataGridControl.Columns>

                            </cpcDataGrid:DataGridControl>
                            <Border x:Name="bdrUpDown"
                                    Grid.Column="3"
                                    Background="#33FFFFFF"
                                    BorderBrush="{DynamicResource DatagridBorderBrush}"
                                    BorderThickness="0,1,1,1">
                                <Grid x:Name="grdUpDown">
                                    <StackPanel x:Name="stkpBtnUpDown"
                                                Height="Auto">
                                        <Button x:Name="btnTop"
                                                Width="45"
                                                Height="45"
                                                Margin="0,5,0,0"
                                                VerticalAlignment="Top"
                                                Command="{Binding MoveItemCommand}"
                                                CommandParameter="MoveUp"
                                                HorizontalContentAlignment="Center">
                                            <StackPanel x:Name="stkpBtnTop"
                                                        Orientation="Horizontal">
                                                <Rectangle x:Name="imgTop"
                                                           Width="25"
                                                           Height="25"
                                                           Fill="{DynamicResource GoToPrevious}"
                                                           RenderTransformOrigin="0.5,0.5">
                                                    <Rectangle.RenderTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform />
                                                            <SkewTransform />
                                                            <RotateTransform Angle="90" />
                                                            <TranslateTransform />
                                                        </TransformGroup>
                                                    </Rectangle.RenderTransform>
                                                </Rectangle>
                                            </StackPanel>
                                        </Button>
                                        <Button x:Name="btnEditItem"
                                                Width="45"
                                                Height="45"
                                                Command="{Binding EditProductCommand}"
                                                Margin="4.5,18,4.5,0"
                                                VerticalAlignment="Top"
                                                HorizontalContentAlignment="Center">
                                            <TextBlock x:Name="txtblEditItem"
                                                       VerticalAlignment="Center"
                                                       FontWeight="Bold"
                                                       Style="{DynamicResource ButtonTextBlock}"
                                                       Text="Edit Item"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap" />
                                        </Button>
                                        <Button x:Name="btnReturnItem"
                                                Width="45"
                                                Height="45"
                                                Margin="4.5,18,4.5,0"
                                                VerticalAlignment="Top"
                                                HorizontalContentAlignment="Center">
                                            <TextBlock x:Name="txtblReturnItem"
                                                       VerticalAlignment="Center"
                                                       FontWeight="Bold"
                                                       Style="{DynamicResource ButtonTextBlock}"
                                                       Text="Return Item"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap" />
                                        </Button>
                                        <Button x:Name="btnDeleteItem"
                                                Width="45"
                                                Height="45"
                                                Margin="4.5,18,4.5,0"
                                                Command="{Binding DeleteItemCommand}"
                                                VerticalAlignment="Top"
                                                HorizontalContentAlignment="Center">
                                            <TextBlock x:Name="txtblDeleteItem"
                                                       VerticalAlignment="Center"
                                                       FontWeight="Bold"
                                                       Style="{DynamicResource ButtonTextBlock}"
                                                       Text="Delete Item"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap" />
                                        </Button>
                                        <Button x:Name="btnBottom"
                                                Width="45"
                                                Height="45"
                                                Margin="4.5,18,4.5,0"
                                                Command="{Binding MoveItemCommand}"
                                                CommandParameter="MoveDown"
                                                VerticalAlignment="Top"
                                                HorizontalContentAlignment="Center">
                                            <StackPanel x:Name="stkpBtnBottom"
                                                        Orientation="Horizontal">
                                                <Rectangle x:Name="imgBottom"
                                                           Width="25"
                                                           Height="25"
                                                           Fill="{DynamicResource GoToNext}"
                                                           RenderTransformOrigin="0.5,0.5">
                                                    <Rectangle.RenderTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform />
                                                            <SkewTransform />
                                                            <RotateTransform Angle="90" />
                                                            <TranslateTransform />
                                                        </TransformGroup>
                                                    </Rectangle.RenderTransform>
                                                </Rectangle>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                        <Grid x:Name="grdOrderSubTotal"
                              Grid.Row="1"
                              Margin="0"
                              VerticalAlignment="Bottom">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="76" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="62" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="62" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25" />
                                <RowDefinition Height="25" />
                                <RowDefinition Height="9" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="txtblOrderTabSubTotal"
                                       Margin="10,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Style="{DynamicResource TextBlockNormal}"
                                       Text="Sub-Total"
                                       TextWrapping="NoWrap"
                                       FontWeight="Bold" />
                            <cpcTextBox:TextBoxMoney x:Name="txtOrderTabSubTotal"
                                                     Grid.Column="1"
                                                     Height="21"
                                                     Margin="0,2"
                                                     HorizontalContentAlignment="Right"
                                                     FontWeight="Bold"
                                                     IsReadOnly="True"
                                                     Padding="2,0,2,0"
                                                     ConverterCulture="{x:Static local:Define.ConverterCulture}"
                                                     CurrencyStringFormat="{x:Static local:Define.CurrencyFormat}"
                                                     Value="{Binding SelectedSaleOrder.SubTotal, Mode=OneWay}"
                                                     TextWrapping="NoWrap"
                                                     d:LayoutOverrides="GridBox"
                                                     Style="{DynamicResource TextBoxTotal}"
                                                     FontSize="14"
                                                     Foreground="#FFFDFF00" />
                            <TextBlock x:Name="txtblOrderTabDiscountAmount"
                                       Grid.Column="3"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Style="{DynamicResource TextBlockNormal}"
                                       Text="Discount"
                                       TextWrapping="NoWrap"
                                       d:LayoutOverrides="Height"
                                       FontWeight="Bold" />
                            <cpcTextBox:TextBoxMoney x:Name="txtShowDiscount"
                                                     Grid.RowSpan="1"
                                                     Grid.Column="4"
                                                     Margin="0,2"
                                                     HorizontalContentAlignment="Right"
                                                     Padding="2,0,2,0"
                                                     ConverterCulture="{x:Static local:Define.ConverterCulture}"
                                                     CurrencyStringFormat="{x:Static local:Define.CurrencyFormat}"
                                                     Value="{Binding SelectedSaleOrder.DiscountAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     TextWrapping="NoWrap"
                                                     Style="{DynamicResource TextBoxTotal}"
                                                     FontSize="14"
                                                     Foreground="#FFFDFF00" />
                            <TextBlock x:Name="txtblOrderTabTaxAmount"
                                       Grid.Column="6"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Style="{DynamicResource TextBlockNormal}"
                                       Text="Tax"
                                       TextWrapping="NoWrap"
                                       d:LayoutOverrides="Height"
                                       FontWeight="Bold" />
                            <cpcTextBox:TextBoxMoney x:Name="txtOrderTabTax"
                                                     Grid.RowSpan="1"
                                                     Grid.Column="7"
                                                     ConverterCulture="{x:Static local:Define.ConverterCulture}"
                                                     CurrencyStringFormat="{x:Static local:Define.CurrencyFormat}"
                                                     IsReadOnly="True"
                                                     Value="{Binding SelectedSaleOrder.TaxAmount, Mode=OneWay}"
                                                     Margin="0,2"
                                                     HorizontalContentAlignment="Right"
                                                     Padding="2,0,2,0"
                                                     TextWrapping="NoWrap"
                                                     Style="{DynamicResource TextBoxTotal}"
                                                     FontSize="14"
                                                     Foreground="#FFFDFF00" />
                            <TextBlock x:Name="txtblOrderTabShippingHandling"
                                       Grid.Row="1"
                                       Grid.Column="6"
                                       Margin="0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Style="{DynamicResource TextBlockNormal}"
                                       Text="Shipping"
                                       TextWrapping="NoWrap"
                                       FontWeight="Bold" />
                            <cpcTextBox:TextBoxMoney x:Name="txtOrderTabShippingHandling"
                                                     Grid.Row="1"
                                                     Grid.RowSpan="1"
                                                     Grid.Column="8"
                                                     Margin="0,2"
                                                     ConverterCulture="{x:Static local:Define.ConverterCulture}"
                                                     CurrencyStringFormat="{x:Static local:Define.CurrencyFormat}"
                                                     HorizontalContentAlignment="Right"
                                                     Value="{Binding SelectedSaleOrder.Shipping, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Padding="2,0,2,0"
                                                     TextWrapping="NoWrap"
                                                     Style="{DynamicResource TextBoxTotal}"
                                                     FontSize="14"
                                                     Foreground="#FFFDFF00" />
                            <Rectangle x:Name="LineOrderTotal"
                                       Grid.Row="2"
                                       Grid.Column="6"
                                       Grid.ColumnSpan="2"
                                       Height="1"
                                       Margin="0"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Center"
                                       Fill="White" />
                            <TextBlock x:Name="txtblOrderTotal"
                                       Grid.Row="3"
                                       Grid.Column="5"
                                       Margin="0,0,10,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Style="{DynamicResource TextBlockNormal}"
                                       Text="Total"
                                       TextWrapping="NoWrap"
                                       d:LayoutOverrides="Width"
                                       FontWeight="Bold" />
                            <cpcTextBox:TextBoxMoney x:Name="txtOrderTotal"
                                                     Grid.Row="3"
                                                     Grid.Column="6"
