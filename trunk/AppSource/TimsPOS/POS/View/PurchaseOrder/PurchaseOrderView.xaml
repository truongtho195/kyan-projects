                                                    <DataGridTextColumn HeaderTemplate="{StaticResource PriceHeaderTemplate}"
                                                                        Width="80"
                                                                        ElementStyle="{StaticResource NumberTextBlock}"
                                                                        Binding="{Binding Price, Mode=OneWay, StringFormat={x:Static pos:Define.CurrencyFormat}, ConverterCulture={x:Static pos:Define.ConverterCulture}}" />

                                                    <DataGridTemplateColumn HeaderTemplate="{StaticResource ReturnedQtyHeaderTemplate}"
                                                                            CellStyle="{StaticResource DataGridCellDisableStyle}"
                                                                            Width="75"
                                                                            SortMemberPath="ReturnQty">

                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock HorizontalAlignment="Right"
                                                                           Text="{Binding ReturnQty, Mode=OneWay, StringFormat={x:Static pos:Define.IntegerFormat}, ConverterCulture={x:Static pos:Define.ConverterCulture}}" />
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>

                                                        <DataGridTemplateColumn.CellEditingTemplate>
                                                            <DataTemplate>
                                                                <textBoxToolkit:TextBoxNumber x:Name="txtReturnQty"
                                                                                              Style="{DynamicResource TextBoxNumberInsideDataGridStyle}"
                                                                                              ConverterCulture="{x:Static pos:Define.ConverterCulture}"
                                                                                              Value="{Binding ReturnQty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellEditingTemplate>

                                                    </DataGridTemplateColumn>

                                                    <DataGridTextColumn HeaderTemplate="{StaticResource DiscountHeaderTemplate}"
                                                                        Width="75"
                                                                        IsReadOnly="True"
                                                                        ElementStyle="{StaticResource NumberTextBlock}"
                                                                        Binding="{Binding Discount, Mode=OneWay, StringFormat={x:Static pos:Define.CurrencyFormat}, ConverterCulture={x:Static pos:Define.ConverterCulture}}" />

                                                    <DataGridTextColumn HeaderTemplate="{StaticResource AmountHeaderTemplate}"
                                                                        Width="80"
                                                                        ElementStyle="{StaticResource NumberTextBlock}"
                                                                        Binding="{Binding Amount, Mode=OneWay, StringFormat={x:Static pos:Define.CurrencyFormat}, ConverterCulture={x:Static pos:Define.ConverterCulture}}" />

                                                    <DataGridTemplateColumn HeaderTemplate="{StaticResource ReturnedHeaderTemplate}"
                                                                            CellStyle="{StaticResource DataGridCellDisableStyle}"
                                                                            Width="75"
                                                                            SortMemberPath="IsReturned">

                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <ToggleButton x:Name="tgReturned"
                                                                              HorizontalAlignment="Center"
                                                                              Visibility="Collapsed"
                                                                              IsEnabled="{Binding IsReturned, Mode=OneWay, Converter={StaticResource ReverseBoolConverter}}"
                                                                              IsChecked="{Binding IsReturned, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                              Style="{StaticResource ToggleButtonTrueFalse}" />
                                                                <DataTemplate.Triggers>
                                                                    <DataTrigger Binding="{Binding IsTemporary, Mode=OneWay}"
                                                                                 Value="False">
                                                                        <Setter Property="Visibility"
                                                                                Value="Visible"
                                                                                TargetName="tgReturned" />
                                                                    </DataTrigger>
                                                                </DataTemplate.Triggers>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>

                                                        <DataGridTemplateColumn.CellEditingTemplate>
                                                            <DataTemplate>
                                                                <ToggleButton x:Name="tgReturned"
                                                                              HorizontalAlignment="Center"
                                                                              IsEnabled="{Binding IsReturned, Mode=OneWay, Converter={StaticResource ReverseBoolConverter}}"
                                                                              IsChecked="{Binding IsReturned, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                              Style="{StaticResource ToggleButtonTrueFalse}" />
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellEditingTemplate>

                                                    </DataGridTemplateColumn >

                                                </cpcDataGridToolkit:DataGridControl.Columns>

                                            </cpcDataGridToolkit:DataGridControl>

                                            <Grid x:Name="grdReturnSubTotal"
                                                  Margin="5,0"
                                                  VerticalAlignment="Top"
                                                  Grid.Row="3">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100" />
                                                    <ColumnDefinition Width="125" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="75" />
                                                    <ColumnDefinition Width="117" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="25" />
                                                    <RowDefinition Height="25" />
                                                    <RowDefinition Height="25" />
                                                    <RowDefinition Height="35" />
                                                </Grid.RowDefinitions>

                                                <TextBlock x:Name="txtblReturnSubTotal1"
                                                           Text="{DynamicResource C112}"
                                                           TextWrapping="NoWrap"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"
                                                           Grid.Column="3"
                                                           Margin="10,0,0,0"
                                                           Style="{DynamicResource TextBlockNormal}" />

                                                <!--SubTotal-->
                                                <textBoxToolkit:TextBoxMoney x:Name="txtReturnSubTotal1"
                                                                             TextWrapping="NoWrap"
                                                                             Padding="2,0,2,0"
                                                                             Grid.Column="4"
                                                                             Grid.RowSpan="1"
                                                                             Margin="0,2"
                                                                             HorizontalContentAlignment="Right"
                                                                             IsReadOnly="True"
                                                                             TextLength="{StaticResource SubTotalMaxLength}"
                                                                             ConverterCulture="{x:Static pos:Define.ConverterCulture}"
                                                                             Value="{Binding SelectedPurchaseOrder.ResourceReturn.SubTotal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                                <TextBlock x:Name="txtblReturnReturnFee"
                                                           Text="{DynamicResource C111}"
                                                           TextWrapping="NoWrap"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"
                                                           Grid.Row="1"
                                                           Grid.Column="3"
                                                           Margin="8,0,0,0"
                                                           Style="{DynamicResource TextBlockNormal}" />

                                                <!--ReturnFee-->
                                                <textBoxToolkit:TextBoxMoney x:Name="txtReturnReturnFee"
                                                                             Margin="0,2"
                                                                             TextWrapping="NoWrap"
                                                                             Padding="2,0,2,0"
                                                                             Grid.Column="4"
                                                                             Grid.Row="1"
                                                                             Grid.RowSpan="1"
                                                                             HorizontalContentAlignment="Right"
                                                                             IsReadOnly="{Binding SelectedPurchaseOrder.IsLocked, Mode=OneWay}"
                                                                             TextLength="{StaticResource DiscountAmountMaxLength}"
                                                                             ConverterCulture="{x:Static pos:Define.ConverterCulture}"
                                                                             Value="{Binding SelectedPurchaseOrder.ResourceReturn.ReturnFee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                                <TextBlock x:Name="txtblReturnRefund"
                                                           Text="{DynamicResource C110}"
                                                           TextWrapping="NoWrap"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"
                                                           Grid.Row="2"
                                                           Grid.Column="3"
                                                           Margin="8,0,0,0"
                                                           Style="{DynamicResource TextBlockNormal}" />

                                                <!--TotalRefund-->
                                                <textBoxToolkit:TextBoxMoney x:Name="txtReturnRefund"
                                                                             Margin="0,2"
                                                                             TextWrapping="NoWrap"
                                                                             Padding="2,0,2,0"
                                                                             Grid.Column="4"
                                                                             Grid.Row="2"
                                                                             Grid.RowSpan="1"
                                                                             HorizontalContentAlignment="Right"
                                                                             IsReadOnly="{Binding SelectedPurchaseOrder.IsLocked, Mode=OneWay}"
                                                                             TextLength="{StaticResource FreightMaxLength}"
                                                                             ConverterCulture="{x:Static pos:Define.ConverterCulture}"
                                                                             Value="{Binding SelectedPurchaseOrder.ResourceReturn.TotalRefund, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="LostFocus">
                                                            <cmd:EventToCommand Command="{Binding DataContext.TotalRefundChangedCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}, Mode=FindAncestor}}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </textBoxToolkit:TextBoxMoney>

                                                <TextBlock x:Name="txtblBalance"
                                                           Text="{DynamicResource C108}"
                                                           TextWrapping="NoWrap"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"
                                                           Grid.Row="3"
                                                           Grid.Column="3"
                                                           Margin="8,0,0,0"
                                                           Style="{DynamicResource TextBlockNormal}" />

                                                <!--Balance-->
                                                <textBoxToolkit:TextBox x:Name="txtReturnBalance"
                                                                        Margin="0,2"
                                                                        TextWrapping="NoWrap"
                                                                        Padding="2,0,2,0"
                                                                        Grid.Column="4"
                                                                        Grid.Row="3"
                                                                        HorizontalContentAlignment="Right"
                                                                        VerticalContentAlignment="Center"
                                                                        IsReadOnly="True"
                                                                        Style="{DynamicResource TextBoxTotal}"
                                                                        MaxLength="{StaticResource TotalMaxLength}"
                                                                        Text="{Binding SelectedPurchaseOrder.ResourceReturn.Balance, Mode=TwoWay, StringFormat={x:Static pos:Define.CurrencyFormat}, UpdateSourceTrigger=PropertyChanged, ConverterCulture={x:Static pos:Define.ConverterCulture}}" />

                                            </Grid>

                                        </Grid>

                                    </AdornerDecorator>

                                </otherControl:CPCTabItemControl>

                            </otherControl:CPCTabControl>

                        </Grid>

                    </Grid>

                </Grid>

            </Grid>

        </xceedWpfToolkit:BusyIndicator>

    </Grid>

</UserControl>