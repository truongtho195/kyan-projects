                                                           Grid.Column="3"
                                                           Margin="8,0,0,0"
                                                           Style="{DynamicResource TextBlockNormal}" />

                                                <!--TotalRefund-->
                                                <textBoxToolkit:TextBoxMoney x:Name="txtReturnRefund"
