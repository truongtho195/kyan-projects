                                                                             TextWrapping="NoWrap"
                                                                             Padding="2,0,2,0"
                                                                             Grid.Column="4"
                                                                             Grid.Row="2"
                                                                             Grid.RowSpan="1"
                                                                             HorizontalContentAlignment="Right"
                                                                             IsReadOnly="True"
