<UserControl x:Name="UserControl"
             x:Class="Tims.View.Employee.HiringHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Luna"
             xmlns:Microsoft_Windows_Controls_Ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
             xmlns:converter="clr-namespace:CPC.Converter"
             Background="{x:Null}"
             Width="600"
             Height="576"
             Tag="Employee Hiring History">
    <UserControl.Resources>
        <converter:IntToTextConverter x:Key="intToTextConverter"></converter:IntToTextConverter>
        <DataTemplate x:Key="DataTemplateRowDetailTemplateHiringHistory">
            <Grid x:Name="Layout1"
                  VerticalAlignment="Top"
                  Margin="0"
                  Width="679">
                <ScrollViewer x:Name="svRowDetailHiringHistoryTemplate"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Width="Auto"
                              Height="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <Grid x:Name="grdHiringHistoryTemplate"
                          Height="Auto"
                          Background="{DynamicResource Datagrid_RowDetailTemplate_Background1}">
                        <Border x:Name="brdHiringHistoryTemplate"
                                HorizontalAlignment="Stretch"
                                Margin="15"
                                VerticalAlignment="Stretch"
                                d:LayoutOverrides="GridBox"
                                BorderBrush="White"
                                BorderThickness="1"
                                Background="{DynamicResource Datagrid_RowDetailTemplate_Background2}">
                            <Grid x:Name="grdTemplateHiringHistory">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="10" />
                                </Grid.RowDefinitions>
                                <Image Stretch="Fill"
                                       VerticalAlignment="Top"
                                       Width="100"
                                       Height="100"
                                       Grid.Row="1" />
                                <Border x:Name="brdContentHiringHistory1"
                                        Height="Auto"
                                        BorderBrush="White"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        d:LayoutOverrides="Width, Height"
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Margin="0,0,10,0">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1"
                                                             StartPoint="0.5,0">
                                            <GradientStop Color="#FF262626"
                                                          Offset="1" />
                                            <GradientStop Color="#FF333333"
                                                          Offset="0.541" />
                                            <GradientStop Color="Black"
                                                          Offset="0.004" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid x:Name="grdContentHiringHistory1"
                                          Visibility="Visible">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="25" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBlock x:Name="txtblSubject"
                                                   Text="Subject:"
                                                   Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                                   TextWrapping="NoWrap"
                                                   d:LayoutOverrides="Width"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Margin="10,0,0,0" />
                                        <TextBlock x:Name="txtblBindingSubject"
                                                   Text="Meeting Friend"
                                                   Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                                   TextWrapping="NoWrap"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="0"
                                                   Grid.Column="1" />
                                        <TextBlock x:Name="txtblDetails"
                                                   Text="Details:"
                                                   Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                                   TextWrapping="NoWrap"
                                                   Grid.Row="1"
                                                   d:LayoutOverrides="Width"
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Left"
                                                   Margin="10,5,0,0" />
                                        <TextBlock x:Name="txtblBindingDetails"
                                                   Text="This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample This is a Sample "
                                                   Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                                   FontSize="11"
                                                   VerticalAlignment="Stretch"
                                                   Grid.Column="1"
                                                   HorizontalAlignment="Left"
                                                   Grid.Row="1"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5,5,5"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                </Border>
                                <Canvas HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,59,0,0"
                                        Grid.Column="1">
                                    <Path Data="M0.5,14.667 L6,0.5 11.5,14.667"
                                          Fill="#FF060606"
                                          HorizontalAlignment="Center"
                                          Height="18.7"
                                          Canvas.Left="-17.1"
                                          RenderTransformOrigin="0.5,0.5"
                                          Stretch="Fill"
                                          Stroke="White"
                                          Canvas.Top="-36.4"
                                          VerticalAlignment="Center"
                                          Width="14.5">
                                        <Path.LayoutTransform>
                                            <TransformGroup>
                                                <ScaleTransform />
                                                <SkewTransform />
                                                <RotateTransform Angle="-90" />
                                                <TranslateTransform />
                                            </TransformGroup>
                                        </Path.LayoutTransform>
                                    </Path>
                                </Canvas>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </DataTemplate>































































    </UserControl.Resources>
    <Grid x:Name="grdHiringHistory"
          Margin="0,0,0,26"
          d:LayoutOverrides="Height">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Border x:Name="brdContentHiringHistory"
                Margin="15,20,15,15"
                BorderBrush="{DynamicResource TabControlBorder}"
                Background="{DynamicResource TabControlBackground}"
                BorderThickness="1">
            <Grid x:Name="grdContentHiringHistory"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="140" />
                </Grid.RowDefinitions>
                <Rectangle x:Name="imgAlarm"
                           Visibility="Collapsed"
                           Fill="{DynamicResource Alarm}"
                           HorizontalAlignment="Left"
                           Height="25"
                           VerticalAlignment="Top"
                           Width="25"
                           Margin="5,0,0,0" />
                <TextBlock VerticalAlignment="Center"
                           Text="Alarms:"
                           x:Name="txtblTimeAlarms"
                           TextWrapping="NoWrap"
                           HorizontalAlignment="Left"
                           FontWeight="Bold"
                           Margin="40,0,0,0"
                           Foreground="White" />
                <TextBlock VerticalAlignment="Center"
                           Text="3"
                           x:Name="txtblTimeAlarmsNumber"
                           TextWrapping="NoWrap"
                           HorizontalAlignment="Left"
                           Margin="90,0,0,0"
                           FontWeight="Bold"
                           Foreground="White" />
                <DataGrid IsSynchronizedWithCurrentItem="True"
                          ItemsSource="{Binding SelectedItemEmployee.EmployeeHistoryCollection}"
                          x:Name="dtgrdHiringHistory"
                          Style="{DynamicResource DatagridWithoutRowHeader}"
                          Grid.Row="0"
                          Grid.RowSpan="3"
                          Margin="0,5,0,10"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date"
                                            IsReadOnly="True"
                                            Binding="{Binding Date}"
                                            Width="100" />
                        <DataGridTemplateColumn Header="Type"
                                                IsReadOnly="True"
                                                Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding HireType, Converter={StaticResource intToTextConverter}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Subject"
                                            Binding="{Binding Subject}"
                                            IsReadOnly="True"
                                            Width="*" />
                        <DataGridTextColumn Header="Content"
                                            Binding="{Binding Content}"
                                            IsReadOnly="True"
                                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
                <Border x:Name="brdTypeSubjectDetail"
                        Visibility="Collapsed"
                        BorderBrush="{DynamicResource TabControlBorder}"
                        BorderThickness="1"
                        Background="{DynamicResource TabControlBackground}"
                        Grid.Row="7">
                    <Grid x:Name="grdTypeSubjectDetail"
                          Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="52" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="txtblType"
                                   Text="Type:"
                                   Foreground="White"
                                   TextWrapping="NoWrap"
                                   Margin="0"
                                   VerticalAlignment="Center"
                                   Visibility="Visible"
                                   d:LayoutOverrides="Width"
                                   HorizontalAlignment="Left" />
                        <ComboBox x:Name="txtType"
                                  Padding="2,0,2,0"
                                  VerticalContentAlignment="Center"
                                  Height="21"
                                  Grid.Column="1"
                                  Margin="0,2"
                                  Width="120"
                                  HorizontalAlignment="Left"
                                  SelectedIndex="2">
                            <ComboBoxItem Content="Review" />
                            <ComboBoxItem Content="Promotion" />
                            <ComboBoxItem Content="Termination" />
                        </ComboBox>
                        <TextBlock x:Name="txtblSubject1"
                                   Text="Subject:"
                                   Foreground="White"
                                   TextWrapping="NoWrap"
                                   Margin="0"
                                   VerticalAlignment="Center"
                                   Visibility="Visible"
                                   Grid.Row="1"
                                   d:LayoutOverrides="Width"
                                   HorizontalAlignment="Left" />
                        <TextBox x:Name="txtSubject"
                                 BorderBrush="Black"
                                 TextWrapping="NoWrap"
                                 Padding="2,0,2,0"
                                 VerticalContentAlignment="Center"
                                 Grid.Row="1"
                                 Height="21"
                                 Grid.Column="1"
                                 Margin="0,2" />
                        <TextBlock x:Name="txtblDetail"
                                   Text="Detail:"
                                   Foreground="White"
                                   TextWrapping="NoWrap"
                                   Margin="0"
                                   VerticalAlignment="Center"
                                   Visibility="Visible"
                                   Grid.Row="2"
                                   d:LayoutOverrides="Width"
                                   HorizontalAlignment="Left" />
                        <TextBox x:Name="txtDetail"
                                 BorderBrush="Black"
                                 TextWrapping="Wrap"
                                 Padding="2,0,2,0"
                                 VerticalContentAlignment="Center"
                                 Grid.Row="2"
                                 Grid.Column="1"
                                 Grid.RowSpan="3"
                                 Margin="0,2" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <Rectangle Fill="White"
                   HorizontalAlignment="Stretch"
                   x:Name="Line"
                   VerticalAlignment="Top"
                   Height="1"
                   Grid.Row="1"
                   Margin="2,0,2,0" />
        <StackPanel VerticalAlignment="Center"
                    Height="Auto"
                    HorizontalAlignment="Center"
                    Grid.Row="1"
                    x:Name="stkpBtn"
                    Orientation="Horizontal">
            <Button x:Name="btnOK"
                    Visibility="Collapsed"
                    Height="28"
                    Width="80">
                <StackPanel HorizontalAlignment="Center"
                            x:Name="stkpBtnOK"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgOK"
                               Fill="{DynamicResource OK}"
                               Height="20"
                               Width="20" />
                    <TextBlock Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Text="OK"
                               TextWrapping="NoWrap"
                               x:Name="txtblOK"
                               Style="{DynamicResource ButtonTextBlock}" />
                </StackPanel>
            </Button>
            <Button x:Name="btnCancel"
                    Height="28"
                    Width="80"
                    Command="{Binding CancelCommand}"
                    Margin="10,0,0,0">
                <StackPanel HorizontalAlignment="Center"
                            x:Name="stkpBtnCancel"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgCancel"
                               Fill="{DynamicResource Cancel}"
                               Height="20"
                               Width="20" />
                    <TextBlock Margin="5,0,0,0"
                               x:Name="txtblExit"
                               VerticalAlignment="Center"
                               Text="Cancel"
                               TextWrapping="NoWrap"
                               Style="{DynamicResource ButtonTextBlock}" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
	