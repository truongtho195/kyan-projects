                                 Padding="2,0,2,0"
                                 Text="A/C #: 59259801 &#10;ABC Company &#10;576 Nguyen Trai Road P1 Q.1 &#10;Phone:(626) 283-4475"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" />
                        <Button x:Name="btnBillToEdit"
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="21"
                                Height="21"
                                Margin="0,2,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                d:IsHidden="True"
                                Visibility="Collapsed"
                                d:LayoutOverrides="Height">
                            <StackPanel x:Name="stkpBtnBillToEdit"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <Image x:Name="imgBillToEdit"
                                       Width="14"
                                       Source="/Image/Edit.png" />
                                <TextBlock x:Name="txtblBillToEdit"
                                           Margin="5,0,0,0"
                                           VerticalAlignment="Center"
                                           Text="Payment"
                                           TextWrapping="NoWrap"
                                           Visibility="Collapsed" />
                            </StackPanel>
                        </Button>
                        <TextBlock x:Name="txtblShipTo"
                                   Grid.Row="1"
                                   Grid.Column="2"
                                   Margin="25,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Text="Ship To:"
                                   TextWrapping="NoWrap"
                                   Visibility="Collapsed" />
                        <TextBox x:Name="txtShipTo"
                                 Grid.Row="1"
                                 Grid.RowSpan="2"
                                 Grid.Column="3"
                                 Margin="0,2,25,2"
                                 Padding="2,0,2,0"
                                 Text="A/C #: 59259801 &#10;ABC Company &#10;154 Lac Hong Road     P1 Q.1 &#10;Phone:(626) 845-6655"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Visibility="Collapsed" />
                        <Button x:Name="btnShipToEdit"
                                Grid.Row="1"
                                Grid.Column="3"
                                Width="21"
                                Height="21"
                                Margin="0,2,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                d:IsHidden="True"
                                Visibility="Collapsed"
                                d:LayoutOverrides="Height">
                            <StackPanel x:Name="stkpBtnShipToEdit"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                <Image x:Name="imgShipToEdit"
                                       Width="14"
                                       Source="/Image/Edit.png" />
                                <TextBlock x:Name="txtblShipToEdit"
                                           Margin="5,0,0,0"
                                           VerticalAlignment="Center"
                                           Text="Payment"
                                           TextWrapping="NoWrap"
                                           Visibility="Collapsed" />
                            </StackPanel>
                        </Button>
                        <TextBlock x:Name="txtblStatus"
                                   Grid.Row="2"
                                   Grid.Column="4"
                                   Margin="17,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource TextBlockNormal}"
                                   Text="Status:"
                                   TextWrapping="NoWrap" />
                        <ComboBox x:Name="cmbStatus"
                                  Grid.Row="2"
                                  Grid.Column="5"
                                  Width="110"
                                  Margin="0,2"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Stretch"
                                  Background="Red"
                                  Foreground="White"
                                  SelectedIndex="5"
                                  Style="{DynamicResource ComboBoxStatus}"
