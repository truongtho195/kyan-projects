                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource TextBlockNormal}"
                                   Text="Job Type:"
                                   TextWrapping="NoWrap" />
                        <ComboBox x:Name="cmbJobType"
                                  Grid.Row="1"
