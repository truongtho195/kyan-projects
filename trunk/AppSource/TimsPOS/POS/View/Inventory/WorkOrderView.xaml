                            <ComboBoxItem Content="Open"
                                          Foreground="Black" />
                            <ComboBoxItem Content="In Progress"
                                          Foreground="Black" />
                            <ComboBoxItem Content="Ongoing"
                                          Foreground="Black" />
                            <ComboBoxItem Content="On Hold"
                                          Foreground="Black" />
                            <ComboBoxItem Content="Completed"
                                          Foreground="Black" />
                            <ComboBoxItem Content="Cancelled"
                                          Foreground="Black" />
                        </ComboBox>
                    </Grid>
                    <Grid x:Name="grdContentWorkOrder"
                          Grid.Row="2"
                          Margin="0,0,0,10"
                          d:LayoutOverrides="Width, Height">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TabControl x:Name="TabWorkOrder"
                                    Margin="10,10,10,0"
                                    d:LayoutOverrides="GridBox">
                            <TabItem x:Name="tabitemWorkOrder"
                                     Header="Work Order">
                                <Grid x:Name="grdTabWorkOrder">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="30" />
                                    </Grid.RowDefinitions>
                                    <DataGrid x:Name="dtgrdWorkOrder"
                                              Margin="5"
                                              IsSynchronizedWithCurrentItem="True"
                                              RowDetailsTemplate="{DynamicResource WorkOrderRowDetailTemplateDataTemplate}"
                                              Style="{DynamicResource DatagridWithRowHeader}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Width="110"
                                                                Header="Item Code" />
                                            <DataGridTextColumn Width="*"
                                                                Header="Finish Products" />
                                            <DataGridTextColumn Width="70"
                                                                Header="Qty" />
                                            <DataGridTextColumn Width="100"
                                                                Header="Amount" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Grid x:Name="grdTotal"
                                          Grid.Row="1"
                                          Width="150"
                                          Height="25"
                                          Margin="0,0,5,0"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          d:LayoutOverrides="GridBox">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtblTotal"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Bold"
                                                   Style="{DynamicResource TextBlockNormal}"
                                                   Text="Total:"
                                                   TextWrapping="NoWrap" />
                                        <TextBox x:Name="txtTotal"
                                                 Grid.Column="1"
                                                 Margin="0,2"
                                                 HorizontalContentAlignment="Right"
                                                 FontWeight="Bold"
                                                 Padding="2,0,2,0"
                                                 Text="$3,100.00"
                                                 TextWrapping="NoWrap" />
                                    </Grid>
                                </Grid>
                            </TabItem>
                            <TabItem x:Name="tabitemFinishProduct"
                                     Header="Finishing Product">
                                <Grid x:Name="grdTabFinishProduct">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Border x:Name="bgFinishingProduct"
                                            Margin="5,0"
                                            Background="{DynamicResource DatagridButtonBackground}"
                                            BorderBrush="{DynamicResource DatagridButtonBorder}"
                                            BorderThickness="1,1,1,0" />
                                    <StackPanel x:Name="stkpBtnFinishingProduct"
                                                Height="Auto"
                                                Margin="10,5,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Orientation="Horizontal"
                                                d:LayoutOverrides="GridBox">
                                        <Button x:Name="btnProduct"
                                                Width="70"
                                                Height="20"
                                                Margin="0"
                                                Style="{DynamicResource ButtonSystem}">
                                            <StackPanel x:Name="stkpBtnProduct"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Orientation="Horizontal">
                                                <Rectangle x:Name="imgProduct"
                                                           Width="20"
                                                           Height="20"
                                                           Fill="{DynamicResource Product}" />
                                                <TextBlock x:Name="txtblProduct"
                                                           Margin="5,0,0,0"
                                                           VerticalAlignment="Center"
                                                           FontSize="11.333"
                                                           Foreground="Black"
                                                           Style="{DynamicResource ButtonDatagridTextBlock}"
                                                           Text="Product"
                                                           TextWrapping="NoWrap" />
                                            </StackPanel>
                                        </Button>
                                        <Button x:Name="btnInvoice"
                                                Width="70"
                                                Height="20"
                                                Margin="0"
                                                Opacity="0.5"
                                                Style="{DynamicResource ButtonSystem}">
                                            <StackPanel x:Name="stkpBtnInvoice"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Orientation="Horizontal">
                                                <Rectangle x:Name="imgInvoice"
                                                           Width="20"
                                                           Height="20"
                                                           Fill="{DynamicResource SalesOrder}" />
                                                <TextBlock x:Name="txtblInvoice"
                                                           Margin="5,0,0,0"
                                                           VerticalAlignment="Center"
                                                           FontSize="11.333"
                                                           Foreground="Black"
                                                           Style="{DynamicResource ButtonDatagridTextBlock}"
                                                           Text="Invoice"
                                                           TextWrapping="NoWrap" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                    <DataGrid x:Name="dtgrdFinishProduct"
                                              Grid.Row="1"
                                              Margin="5,0,5,5"
                                              BorderThickness="1,0,1,1"
                                              IsSynchronizedWithCurrentItem="True"
                                              RowDetailsTemplate="{DynamicResource FinishingProductRowDetailTemplateDataTemplate}"
                                              Style="{DynamicResource DatagridWithRowHeader}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Width="110"
                                                                Header="Item Code" />
                                            <DataGridTextColumn Width="*"
                                                                Header="Finish Products" />
                                            <DataGridTextColumn Width="70"
                                                                Header="Qty" />
                                            <DataGridTextColumn Width="100"
                                                                Header="Amount" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Grid>

            </Grid>

        </Grid>

    </Grid>

</UserControl>