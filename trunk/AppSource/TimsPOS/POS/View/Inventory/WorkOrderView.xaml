                        <DatePicker x:Name="dtpFinishDate"
                                    Grid.Row="1"
                                    Grid.Column="7"
                                    Width="110"
                                    Margin="0,2"
                                    HorizontalAlignment="Left"
                                    TabIndex="{Binding TabIndexControl}" />
                        <TextBlock x:Name="txtblAssignto"
                                   Grid.Row="2"
                                   Margin="10,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource TextBlockNormal}"
                                   Text="Assign to:"
                                   TextWrapping="NoWrap" />
                        <ComboBox x:Name="cmbAssignto"
                                  Grid.Row="2"
