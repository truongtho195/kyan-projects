            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid x:Name="grid"
                          Width="Auto"
                          Height="Auto">
                        <Rectangle x:Name="rectangle"
                                   RadiusX="3"
                                   RadiusY="3"
                                   Stroke="#FF414141"
                                   StrokeThickness="1">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0.5,0"
                                                     EndPoint="0.5,1">
                                    <GradientStop Offset="0.003"
                                                  Color="#FFFFBCBC" />
                                    <GradientStop Offset="0.26"
