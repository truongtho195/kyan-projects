<Window x:Class="CPC.Control.OnScreenKeyboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OnScreenKeyboard"
        AllowsTransparency="True"
        xmlns:control="clr-namespace:CPC.Control"
        Topmost="True"
        Focusable="False"
        WindowStyle="None">
    <DockPanel>
        <ContentControl x:Name="pnlMain"
                        DockPanel.Dock="Top"
                        Visibility="Visible">
            <ContentControl.Style>
                <Style TargetType="{x:Type ContentControl}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ContentControl}">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ContentControl.Style>
        </ContentControl>
        <control:IPhoneKeyboard DockPanel.Dock="Bottom" x:Name="ctKeyBoard" />

    </DockPanel>
</Window>
