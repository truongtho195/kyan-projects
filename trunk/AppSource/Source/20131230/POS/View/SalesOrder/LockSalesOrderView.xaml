                                                         Grid.Column="5"
                                                         Margin="0,2"
                                                         HorizontalContentAlignment="Right"
                                                         Padding="2,0,2,0"
                                                         Text="$10.00"
                                                         TextWrapping="NoWrap"
                                                         Visibility="Collapsed" />
