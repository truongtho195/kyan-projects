                                             Margin="0"
                                             Grid.RowSpan="1"
                                             Grid.Row="1">
                                        <ListBoxItem Visibility="{Binding MemberTypes[0].Islocked, Converter={StaticResource booleanToVisibilityConverter}, Mode=OneWay}"
                                                     IsEnabled="{Binding MemberTypes[0].Islocked, Mode=OneWay}">
                                            <Grid Margin="0"
                                                  d:LayoutOverrides="Width"
                                                  Grid.Row="5">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="0" />
                                                    <RowDefinition Height="25" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="115" />
                                                    <ColumnDefinition Width="102" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock x:Name="txtblMarkup"
                                                           Text="Markup (%)"
                                                           TextWrapping="NoWrap"
                                                           HorizontalAlignment="Left"
                                                           Style="{DynamicResource TextBlockNormal}"
                                                           VerticalAlignment="Center"
                                                           Grid.Column="2"
                                                           Margin="0"
                                                           Visibility="Collapsed"
                                                           d:IsHidden="True" />
                                                <TextBlock x:Name="txtblBronze"
                                                           Text="{Binding MemberTypes[0].Text}"
                                                           TextWrapping="NoWrap"
                                                           HorizontalAlignment="Left"
                                                           Style="{DynamicResource TextBlockNormal}"
                                                           VerticalAlignment="Center"
                                                           Margin="10,0,0,0"
                                                           Grid.Row="1" />
                                                <cpcTextBoxControl:TextBoxNumeric x:Name="txtTierReward"
