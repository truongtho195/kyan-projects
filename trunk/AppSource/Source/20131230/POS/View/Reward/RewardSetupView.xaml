                                                                                  TextWrapping="NoWrap"
                                                                                  Grid.Column="1"
                                                                                  ConverterCulture="{x:Static local:Define.ConverterCulture}"
                                                                                  NumericStringFormat="{x:Static local:Define.NumericFormat}"
                                                                                  CurrencyDecimalDigits="2"
                                                                                  Value="{Binding DataContext.RewardManagerModel.L1Amount, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type UserControl}, Mode=FindAncestor}, UpdateSourceTrigger=PropertyChanged}"
                                                                                  Padding="2,0,2,0"
                                                                                  Grid.Row="1"
                                                                                  Grid.ColumnSpan="2" />
                                                <cpcTextBoxControl:TextBoxNumeric x:Name="txtMarkup"
