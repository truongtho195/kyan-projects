<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cpcDataGridToolkit="clr-namespace:CPCToolkitExt.DataGridControl;assembly=CPCToolkitExt"
             xmlns:textBoxToolkit="clr-namespace:CPCToolkitExt.TextBoxControl;assembly=CPCToolkitExt"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:behavior="clr-namespace:CPC.Toolkit.Behavior"
             xmlns:pos="clr-namespace:CPC.POS"
             x:Class="CPC.POS.View.CashOutView"
             mc:Ignorable="d"
             x:Name="UserControl"
             Height="598"
             Width="643">

    <UserControl.Resources>

        <Style x:Key="CashInListBoxItemStyle"
               TargetType="{x:Type ListBoxItem}">
            <Setter Property="Focusable"
                    Value="False" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="HorizontalContentAlignment"
                    Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
            <Setter Property="VerticalContentAlignment"
                    Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
            <Setter Property="Padding"
                    Value="2,0,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border x:Name="Bd"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="true">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin"
                                     Value="True">
                                <Setter Property="IsSelected"
                                        Value="True" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid x:Name="grdCashOut"
          d:LayoutOverrides="Height">

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Border x:Name="brdContentCashOut"
                Margin="15,20,15,15"
                Background="{DynamicResource TabControlBackground}"
                BorderBrush="{DynamicResource TabControlBorder}"
                BorderThickness="1">

            <Grid x:Name="grdContentCashOut"
                  Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock x:Name="txtblCashOutfor"
                           Text="Cash In for"
                           TextWrapping="NoWrap"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Style="{DynamicResource TextBlockNormal}"
                           d:LayoutOverrides="HorizontalAlignment" />

                <!--Casher name-->
                <textBoxToolkit:TextBox x:Name="txtCashOutfor"
                                        Margin="74,2,0,2"
                                        TextWrapping="NoWrap"
                                        HorizontalAlignment="Left"
                                        Width="140"
                                        IsReadOnly="True"
                                        Text="{Binding CashFlowModel.CashierName, Mode=OneWay}" />

                <Border x:Name="brdSubContentCashOut"
                        BorderThickness="1"
                        Background="#19FFFFFF"
                        Grid.Row="3"
                        BorderBrush="{DynamicResource TabControlBorder}"
                        Margin="0,10,0,0">

                    <Grid x:Name="grdSubContentCashOut"
                          Margin="10">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="384" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--Cash List-->
                        <Grid x:Name="grdCashTotal"
                              Margin="0,0,10,0">

                            <!--Cash List-->
                            <GroupBox x:Name="gbCash"
                                      d:LayoutOverrides="GridBox"
                                      VerticalAlignment="Top"
                                      Height="302">

                                <GroupBox.Header>

                                    <TextBlock x:Name="txtblCash"
                                               Text="Cash"
                                               TextWrapping="NoWrap"
                                               Style="{DynamicResource GroupboxTextBlock}" />

                                </GroupBox.Header>

                                <Grid x:Name="grdContentCash"
                                      d:LayoutOverrides="Height"
                                      Margin="0,4,0,0">

                                    <ListBox x:Name="lbCash"
                                             Grid.RowSpan="12"
                                             Grid.ColumnSpan="5"
                                             BorderBrush="{x:Null}"
                                             BorderThickness="0"
                                             Background="{x:Null}"
                                             ItemContainerStyle="{DynamicResource CashInListBoxItemStyle}"
                                             ItemsSource="{Binding CashCollection, Mode=OneWay}">

                                        <ListBox.ItemTemplate>

                                            <DataTemplate>

                                                <Grid x:Name="grdCashIn"
                                                      Height="25">

                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60" />
                                                        <ColumnDefinition Width="25" />
                                                        <ColumnDefinition Width="40" />
                                                        <ColumnDefinition Width="25" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock x:Name="txtblSymbol"
                                                               TextWrapping="NoWrap"
                                                               HorizontalAlignment="Left"
                                                               Style="{DynamicResource TextBlockNormal}"
                                                               VerticalAlignment="Center"
                                                               Margin="10,0,0,0"
                                                               Text="{x:Static pos:Define.CurrencySymbol}" />

                                                    <TextBlock x:Name="txtbl100"
                                                               TextWrapping="NoWrap"
                                                               HorizontalAlignment="Left"
                                                               Style="{DynamicResource TextBlockNormal}"
                                                               VerticalAlignment="Center"
                                                               Margin="22,0,0,0"
                                                               Text="{Binding Value, Mode=OneWay}" />

                                                    <TextBlock Text="x"
                                                               TextWrapping="NoWrap"
                                                               HorizontalAlignment="Center"
                                                               Style="{DynamicResource TextBlockNormal}"
                                                               VerticalAlignment="Center"
                                                               Margin="0"
                                                               Grid.Column="1" />

                                                    <textBoxToolkit:TextBoxNumeric Margin="0,2"
                                                                                   TextWrapping="NoWrap"
                                                                                   Grid.Column="2"
                                                                                   Padding="2,0,2,0"
                                                                                   CurrencyDecimalDigits="0"
                                                                                   ConverterCulture="{x:Static pos:Define.ConverterCulture}"
                                                                                   NumericStringFormat="{}{0:N0}"
                                                                                   Value="{Binding Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                        <i:Interaction.Behaviors>
                                                            <behavior:OneAutoFocusBehavior />
                                                        </i:Interaction.Behaviors>
                                                    </textBoxToolkit:TextBoxNumeric>

                                                    <TextBlock Text="="
                                                               TextWrapping="NoWrap"
                                                               HorizontalAlignment="Center"
                                                               Style="{DynamicResource TextBlockNormal}"
                                                               VerticalAlignment="Center"
                                                               Margin="0"
                                                               Grid.Column="3" />

                                                    <textBoxToolkit:TextBoxMoney Margin="0,2,10,2"
                                                                                 TextWrapping="NoWrap"
                                                                                 Grid.Column="4"
                                                                                 IsReadOnly="True"
                                                                                 ConverterCulture="{x:Static pos:Define.ConverterCulture}"
                                                                                 CurrencyStringFormat="{x:Static pos:Define.CurrencyFormat}"
                                                                                 Focusable="False"
                                                                                 Value="{Binding Total, Mode=OneWay}" />

                                                </Grid>

                                            </DataTemplate>

                                        </ListBox.ItemTemplate>

                                    </ListBox>

                                </Grid>

                            </GroupBox>

                            <!--Other Cash Total-->
                            <Border x:Name="brdOtherCashTotal"
                                    BorderThickness="1"
                                    Background="{DynamicResource GroupboxBackground}"
                                    BorderBrush="{DynamicResource GroupboxBorder}"
                                    Margin="0,312,0,10">

                                <Grid x:Name="grdOtherCashTotal"
                                      Margin="5"
                                      VerticalAlignment="Center">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="0" />
                                    </Grid.RowDefinitions>

                                    <TextBlock x:Name="txtblOtherCashTotal"
                                               Text="Other Cash Total"
                                               TextWrapping="NoWrap"
                                               HorizontalAlignment="Left"
                                               Style="{DynamicResource TextBlockNormal}"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0" />

                                    <textBoxToolkit:TextBoxMoney x:Name="txtOtherCashTotal"
                                                                 Margin="0,2,10,2"
                                                                 TextWrapping="NoWrap"
                                                                 Grid.Column="1"
                                                                 Padding="2,0,2,0"
                                                                 Width="88"
                                                                 ConverterCulture="{x:Static pos:Define.ConverterCulture}"
                                                                 CurrencyStringFormat="{x:Static pos:Define.CurrencyFormat}"
                                                                 Value="{Binding CashFlowModel.CloseOtherCashTotal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                </Grid>

                            </Border>

                        </Grid>

                        <Rectangle x:Name="Line1"
                                   Fill="{DynamicResource Spilter_Line_Background}"
                                   HorizontalAlignment="Left"
                                   Width="1"
                                   Grid.Column="1"
                                   Margin="0,-10,0,0" />

                        <!--OtherPayment-->
                        <Grid x:Name="grdPaymentDrawer"
                              Grid.Column="1"
                              Margin="10,0,0,0">

                            <GroupBox x:Name="gbOtherPayment"
                                      Margin="0"
                                      Height="302"
                                      VerticalAlignment="Top">

                                <GroupBox.Header>
                                    <TextBlock x:Name="txtblOtherPayment"
                                               Text="Other Payment"
                                               TextWrapping="NoWrap"
                                               Style="{DynamicResource GroupboxTextBlock}" />
                                </GroupBox.Header>

                                <Grid x:Name="grdContentOtherPayment"
                                      Margin="0,4,0,0">

                                    <TabControl x:Name="TabCreditVoucherCheck"
                                                Margin="5">

                                        <!--Credit-->
                                        <TabItem x:Name="tabitemCredit"
                                                 Header="Credit">

                                            <Grid x:Name="grdCredit">

                                                <Grid.RowDefinitions>

                                                    <RowDefinition Height="Auto"
                                                                   MinHeight="4.4" />
                                                    <RowDefinition />

                                                </Grid.RowDefinitions>

                                                <cpcDataGridToolkit:DataGridControl x:Name="dtgrdCredit"
                                                                                    Style="{DynamicResource DatagridWithRowHeader}"
                                                                                    Margin="5,0.2,5,5"
                                                                                    Grid.Row="8"
                                                                                    IsReadOnly="True"
                                                                                    AutoGenerateColumns="False"
                                                                                    CanUserAddRows="False"
                                                                                    CanUserDeleteRows="False"
                                                                                    ItemsSource="{Binding CreditCollection, Mode=OneWay}">

                                                    <cpcDataGridToolkit:DataGridControl.Columns>

                                                        <DataGridTextColumn Header="Payment Type"
                                                                            Width="*"
                                                                            Binding="{Binding PaymentMethod, Mode=OneWay}" />
                                                        <DataGridTextColumn Header="Count"
                                                                            Width="*"
                                                                            Binding="{Binding Count, Mode=OneWay}" />

                                                        <DataGridTextColumn Header="Amount"
                                                                            Width="80"
                                                                            Binding="{Binding Paid, Mode=OneWay}" />

                                                    </cpcDataGridToolkit:DataGridControl.Columns>

                                                </cpcDataGridToolkit:DataGridControl>

                                            </Grid>

                                        </TabItem>

                                        <!--Voucher-->
                                        <TabItem x:Name="tabitemGiftCard"
                                                 Header="Gift Card">
                                            <Grid x:Name="grdGiftCard">

                                                <Grid.RowDefinitions>

                                                    <RowDefinition Height="Auto"
                                                                   MinHeight="4.4" />
                                                    <RowDefinition />

                                                </Grid.RowDefinitions>

                                                <cpcDataGridToolkit:DataGridControl x:Name="dtgrdGiftCard"
                                                                                    Style="{DynamicResource DatagridWithRowHeader}"
                                                                                    Margin="5,0.2,5,5"
                                                                                    Grid.Row="8"
                                                                                    IsReadOnly="True"
                                                                                    AutoGenerateColumns="False"
                                                                                    CanUserAddRows="False"
                                                                                    CanUserDeleteRows="False"
                                                                                    ItemsSource="{Binding VoucherCollection, Mode=OneWay}">

                                                    <cpcDataGridToolkit:DataGridControl.Columns>

                                                        <DataGridTextColumn Header="Count"
                                                                            Width="*"
                                                                            Binding="{Binding Count, Mode=OneWay}" />

                                                        <DataGridTextColumn Header="Amount"
                                                                            Width="*"
                                                                            Binding="{Binding Paid, Mode=OneWay}" />

                                                    </cpcDataGridToolkit:DataGridControl.Columns>

                                                </cpcDataGridToolkit:DataGridControl>

                                            </Grid>
                                        </TabItem>

                                        <!--Check-->
                                        <TabItem x:Name="tabitemCheck"
                                                 Header="Check">

                                            <Grid x:Name="grdCheck">

                                                <Grid.RowDefinitions>

                                                    <RowDefinition Height="Auto"
                                                                   MinHeight="4.4" />
                                                    <RowDefinition />

                                                </Grid.RowDefinitions>

                                                <cpcDataGridToolkit:DataGridControl x:Name="dtgrdCheck"
                                                                                    Style="{DynamicResource DatagridWithRowHeader}"
                                                                                    Margin="5,0.2,5,5"
                                                                                    Grid.Row="8"
                                                                                    IsReadOnly="True"
                                                                                    AutoGenerateColumns="False"
                                                                                    CanUserAddRows="False"
                                                                                    CanUserDeleteRows="False"
                                                                                    ItemsSource="{Binding CheckCollection, Mode=OneWay}">

                                                    <cpcDataGridToolkit:DataGridControl.Columns>

                                                        <DataGridTextColumn Header="Count"
                                                                            Width="*"
                                                                            Binding="{Binding Count, Mode=OneWay}" />

                                                        <DataGridTextColumn Header="Amount"
                                                                            Width="*"
                                                                            Binding="{Binding Paid, Mode=OneWay}" />

                                                    </cpcDataGridToolkit:DataGridControl.Columns>

                                                </cpcDataGridToolkit:DataGridControl>

                                            </Grid>

                                        </TabItem>

                                    </TabControl>

                                </Grid>

                            </GroupBox>

                            <!--Drawer-->
                            <GroupBox x:Name="gbDrawer"
                                      VerticalAlignment="Bottom"
                                      Margin="0,0,0,10">

                                <GroupBox.Header>
                                    <TextBlock x:Name="txtblCashDrawer"
                                               Text="Cash Drawer"
                                               TextWrapping="NoWrap"
                                               Style="{DynamicResource GroupboxTextBlock}" />
                                </GroupBox.Header>

                                <Grid x:Name="grdContentDrawer"
                                      Margin="0,4,0,0">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                    </Grid.RowDefinitions>

                                    <TextBlock x:Name="txtblUserName"
                                               Text="User Name:"
                                               TextWrapping="NoWrap"
                                               HorizontalAlignment="Left"
                                               Style="{DynamicResource TextBlockNormal}"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0" />

                                    <TextBlock x:Name="txtblBindingUserName"
                                               TextWrapping="NoWrap"
                                               HorizontalAlignment="Left"
                                               Style="{DynamicResource TextBlockNormal}"
                                               VerticalAlignment="Center"
                                               Margin="76,0,0,0"
                                               Grid.Column="1"
                                               Text="{Binding CashFlowModel.CashierName, Mode=OneWay}" />

                                    <TextBlock x:Name="txtblShift"
                                               Text="Shift:"
                                               TextWrapping="NoWrap"
                                               HorizontalAlignment="Left"
                                               Style="{DynamicResource TextBlockNormal}"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"
                                               Grid.Row="3" />

                                    <TextBlock x:Name="txtblBindingShift"
                                               TextWrapping="NoWrap"
                                               HorizontalAlignment="Left"
                                               Style="{DynamicResource TextBlockNormal}"
                                               VerticalAlignment="Center"
                                               Margin="45,0,0,0"
                                               Grid.Row="3"
                                               Grid.Column="1"
                                               Text="{Binding CashFlowModel.Shift, Mode=OneWay}" />

                                    <TextBlock x:Name="txtblDrawerNo"
                                               Text="Drawer #:"
                                               TextWrapping="NoWrap"
                                               HorizontalAlignment="Left"
                                               Style="{DynamicResource TextBlockNormal}"
                                               VerticalAlignment="Center"
                                               Margin="200,0,0,0"
                                               Grid.Column="1" />

                                    <TextBlock x:Name="txtblBindingDrawerNo"
                                               TextWrapping="NoWrap"
                                               HorizontalAlignment="Left"
                                               Style="{DynamicResource TextBlockNormal}"
                                               VerticalAlignment="Center"
                                               Margin="260,0,0,0"
                                               Grid.Column="1"
                                               Text="{Binding CashFlowModel.DrawerNo, Mode=OneWay}" />

                                    <TextBlock x:Name="txtblIn"
                                               Text="In:"
                                               TextWrapping="NoWrap"
                                               Style="{DynamicResource TextBlockNormal}"
                                               VerticalAlignment="Center"
                                               Margin="200,0,0,0"
                                               Grid.Row="2"
                                               d:LayoutOverrides="Width, GridBox"
                                               HorizontalAlignment="Left" />

                                    <TextBlock x:Name="txtblBindingIn"
                                               TextWrapping="NoWrap"
                                               HorizontalAlignment="Left"
                                               Style="{DynamicResource TextBlockNormal}"
                                               VerticalAlignment="Center"
                                               Margin="224,0,0,0"
                                               Grid.Row="2"
                                               Grid.Column="1"
                                               Text="{Binding CashFlowModel.OpenDate, Mode=OneWay, StringFormat={x:Static pos:Define.DateFormat}}" />

                                </Grid>

                            </GroupBox>

                        </Grid>

                        <Rectangle x:Name="Line2"
                                   Fill="{DynamicResource Spilter_Line_Background}"
                                   HorizontalAlignment="Left"
                                   Width="1"
                                   Grid.Column="2"
                                   Margin="0,-10,0,0"
                                   d:IsHidden="True" />

                        <Rectangle x:Name="Line3"
                                   Fill="{DynamicResource Spilter_Line_Background}"
                                   Margin="-10,0"
                                   Height="1"
                                   VerticalAlignment="Bottom"
                                   Grid.ColumnSpan="3" />

                        <StackPanel x:Name="stkpTotal"
                                    Orientation="Horizontal"
                                    Grid.ColumnSpan="2"
                                    Margin="0,10,0,0"
                                    Grid.Row="1"
                                    d:LayoutOverrides="Height">

                            <Grid x:Name="grdTotal"
                                  Width="183"
                                  HorizontalAlignment="Right"
                                  Height="40"
                                  VerticalAlignment="Bottom"
                                  d:LayoutOverrides="GridBox"
                                  Margin="0">

                                <textBoxToolkit:TextBoxMoney  x:Name="txtCashTotal"
                                                              BorderThickness="2"
                                                              FontSize="13.333"
                                                              VerticalContentAlignment="Bottom"
                                                              FontWeight="Bold"
                                                              IsReadOnly="True"
                                                              ConverterCulture="{x:Static pos:Define.ConverterCulture}"
                                                              CurrencyStringFormat="{x:Static pos:Define.CurrencyFormat}"
                                                              Value="{Binding CashFlowModel.CloseCashTotal, Mode=OneWay}" Style="{DynamicResource TextBoxPayment}" />

                                <TextBlock x:Name="txtblCashTotal"
                                           Text="Cash Total"
                                           TextWrapping="NoWrap"
                                           FontFamily="Tahoma"
                                           HorizontalAlignment="Left"
                                           Margin="5,5,0,0"
                                           Style="{DynamicResource TextBlockPayment}"
                                           d:LayoutOverrides="Height, GridBox"
                                           VerticalAlignment="Top" />

                            </Grid>

                            <Grid x:Name="grdCreditTotal"
                                  Width="183"
                                  HorizontalAlignment="Right"
                                  Height="40"
                                  VerticalAlignment="Bottom"
                                  d:LayoutOverrides="GridBox"
                                  Margin="10,0,0,0">

                                <textBoxToolkit:TextBoxMoney  x:Name="txtCreditTotal"
                                                              BorderThickness="2"
                                                              FontSize="13.333"
                                                              VerticalContentAlignment="Bottom"
                                                              FontWeight="Bold"
                                                              IsReadOnly="True"
                                                              ConverterCulture="{x:Static pos:Define.ConverterCulture}"
                                                              CurrencyStringFormat="{x:Static pos:Define.CurrencyFormat}"
                                                              Value="{Binding CashFlowModel.CreditCashTotal, Mode=OneWay}" Style="{DynamicResource TextBoxPayment}" />

                                <TextBlock x:Name="txtblCreditTotal"
                                           Text="CreditTotal"
                                           TextWrapping="NoWrap"
                                           HorizontalAlignment="Left"
                                           Margin="5,5,0,0"
                                           d:LayoutOverrides="Height, GridBox"
                                           VerticalAlignment="Top" Style="{DynamicResource TextBlockPayment}" />

                            </Grid>

                            <Grid x:Name="grdCardTotal"
                                  Width="183"
                                  HorizontalAlignment="Right"
                                  Height="40"
                                  VerticalAlignment="Bottom"
                                  d:LayoutOverrides="GridBox"
                                  Margin="10,0,0,0">

                                <textBoxToolkit:TextBoxMoney x:Name="txtCardTotal"
                                                             BorderThickness="2"
                                                             Style="{DynamicResource TextBoxPayment}"
                                                             FontSize="13.333"
                                                             VerticalContentAlignment="Bottom"
                                                             FontWeight="Bold"
                                                             IsReadOnly="True"
                                                             ConverterCulture="{x:Static pos:Define.ConverterCulture}"
                                                             CurrencyStringFormat="{x:Static pos:Define.CurrencyFormat}"
                                                             Value="{Binding CashFlowModel.VoucherTotal, Mode=OneWay}" />

                                <TextBlock x:Name="txtblCardTotal"
                                           Text="Card Total"
                                           TextWrapping="NoWrap"
                                           HorizontalAlignment="Left"
                                           Margin="5,5,0,0"
                                           Style="{DynamicResource TextBlockPayment}"
                                           d:LayoutOverrides="Height, GridBox"
                                           VerticalAlignment="Top" />

                            </Grid>

                        </StackPanel>

                    </Grid>

                </Border>

            </Grid>

        </Border>

        <Rectangle Fill="{DynamicResource Spilter_Line_Background}"
                   HorizontalAlignment="Stretch"
                   x:Name="Line"
                   VerticalAlignment="Top"
                   Height="1"
                   Grid.Row="1"
                   Margin="2,0" />

        <StackPanel VerticalAlignment="Center"
                    Height="Auto"
                    x:Name="stkpBtn"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Row="1">

            <Button x:Name="btnPrint"
                    Height="28"
                    Width="80"
                    Margin="0">
                <StackPanel HorizontalAlignment="Center"
                            x:Name="stkpBtnPrint"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgPrint"
                               Fill="{DynamicResource Print}"
                               Height="20"
                               Width="20" />
                    <TextBlock Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Text="Print"
                               TextWrapping="NoWrap"
                               x:Name="txtblPrint"
                               Foreground="White"
                               Style="{DynamicResource ButtonTextBlock}" />
                </StackPanel>
            </Button>

            <Button x:Name="btnOK"
                    Height="28"
                    Width="80"
                    Margin="10,0,0,0"
                    Command="{Binding SaveCommand}">
                <StackPanel HorizontalAlignment="Center"
                            x:Name="stkpBtnOK"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgOK"
                               Fill="{DynamicResource OK}"
                               Height="20"
                               Width="20" />
                    <TextBlock Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Text="OK"
                               TextWrapping="NoWrap"
                               x:Name="txtblOK"
                               Style="{DynamicResource ButtonTextBlock}" />
                </StackPanel>
            </Button>

            <Button x:Name="btnCancel"
                    Height="28"
                    Width="80"
                    Margin="10,0,0,0"
                    Command="{Binding CancelCommand}">
                <StackPanel HorizontalAlignment="Center"
                            x:Name="stkpBtnCancel"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgCancel"
                               Fill="{DynamicResource Cancel}"
                               Height="20"
                               Width="20" />
                    <TextBlock Margin="5,0,0,0"
                               x:Name="txtblExit"
                               VerticalAlignment="Center"
                               Text="Cancel"
                               TextWrapping="NoWrap"
                               Style="{DynamicResource ButtonTextBlock}" />
                </StackPanel>
            </Button>

        </StackPanel>

    </Grid>

</UserControl>
	