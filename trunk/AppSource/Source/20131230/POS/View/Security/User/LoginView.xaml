<Window x:Class="CPC.POS.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behavior="clr-namespace:CPC.Toolkit.Behavior"
        xmlns:converter="clr-namespace:CPC.Converter"
        xmlns:cpcTextBoxControl="clr-namespace:CPCToolkitExt.TextBoxControl;assembly=CPCToolkitExt"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:helper="clr-namespace:CPC.Helper"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        Title="Truong Giang - Authentication"
        Width="377"
        Height="336"
        AllowsTransparency="True"
        Background="{x:Null}"
        FocusManager.FocusedElement="{Binding ElementName=txtUsername}"
        helper:ValidationHelper.IsEnabled="True"
        helper:ValidationHelper.IsValid="{Binding IsValid, Mode=OneWayToSource}"
        Icon="/POS.ico"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Border x:Name="brdLogin"
            Background="{DynamicResource UserControlBackground}"
            BorderBrush="{DynamicResource TitleBarBorder}"
            BorderThickness="5,5,5,5"
            CornerRadius="5,5,5,5">
        <Grid x:Name="grdLogin">
            <Rectangle x:Name="UserControl_Background_Image"
                       Fill="{DynamicResource UserControl_Background_Image}" />
            <Border x:Name="brdContentLogin"
                    Margin="10,10,10,10"
                    Background="{DynamicResource TimeClockDisplayBackground}"
                    BorderBrush="{DynamicResource TimeClockDisplayBorder}"
                    BorderThickness="1,1,1,1"
                    CornerRadius="5,5,5,5">
                <Grid x:Name="grdContentLogin"
                      Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="124" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid x:Name="grdLogoCompany"
                          HorizontalAlignment="Stretch">
                        <Rectangle x:Name="bgInOut"
                                   Grid.RowSpan="2"
                                   Grid.ColumnSpan="2"
                                   Fill="#FFFFFFFF"
                                   RadiusX="5"
                                   RadiusY="5"
                                   Stroke="White" />
                        <Image x:Name="imgLogo"
                               Grid.RowSpan="2"
                               Margin="3"
                               Source="/Image/3D Logo Flat.jpg"
                               Stretch="Uniform" />
                    </Grid>
                    <Grid x:Name="grdLoginPassword"
                          Grid.Row="1"
                          Margin="0,14,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="Auto"
                                           MinHeight="25" />
                            <RowDefinition Height="18" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="txtblUsername"
                                   Margin="30,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource TextBlockNormal}"
                                   Text="{DynamicResource LG_TextBlock_UserName}"
                                   TextWrapping="NoWrap" />
                        <cpcTextBoxControl:TextBox x:Name="txtUsername"
                                                   Width="200"
                                                   Margin="95,2,10,2"
                                                   HorizontalAlignment="Left"
                                                   Padding="20,0,2,0"
                                                   Text="{Binding Path=UserName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                   TextWrapping="NoWrap" />
                        <Rectangle x:Name="imgUser"
                                   Width="16"
                                   Height="16"
                                   Margin="96,0,0,0"
                                   HorizontalAlignment="Left"
                                   Fill="{DynamicResource User}" />
                        <TextBlock x:Name="txtblPassword"
                                   Grid.Row="1"
                                   Margin="30,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource TextBlockNormal}"
                                   Text="{DynamicResource LG_TextBlock_Password}"
                                   TextWrapping="NoWrap" />
                        <PasswordBox x:Name="txtPassword"
                                     Grid.Row="1"
                                     Width="200"
                                     Margin="95,2,0,2"
                                     HorizontalAlignment="Left"
                                     VerticalContentAlignment="Center"
                                     helper:PasswordHelper.BindPassword="true"
                                     helper:PasswordHelper.BoundPassword="{Binding Path=UserPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                     Padding="20,0,2,0"
                                     PasswordChar="*" />
                        <Rectangle x:Name="imgPassword"
                                   Grid.Row="1"
                                   Width="16"
                                   Height="16"
                                   Margin="96,0,0,0"
                                   HorizontalAlignment="Left"
                                   Fill="{DynamicResource Password}" />
                        <TextBlock x:Name="txtblLanguage"
                                   Grid.Row="2"
                                   Margin="30,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource TextBlockNormal}"
                                   Text="{DynamicResource LG_TextBlock_Language}"
                                   TextWrapping="NoWrap"
                                   Visibility="Collapsed" />
                        <ComboBox x:Name="cmbLanguage"
                                  Grid.Row="2"
                                  Width="90.417"
                                  Margin="95,2,0,2"
                                  HorizontalAlignment="Left"
                                  DisplayMemberPath="Text"
                                  ItemsSource="{Binding Languages}"
                                  SelectedItem="{Binding LanguageItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Visibility="Collapsed" />
                        <CheckBox x:Name="cbRememeber"
                                  Grid.Row="2"
                                  Margin="95,0,40,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Content="{DynamicResource LG_TextBlock_RememberMe}"
                                  Foreground="White"
                                  IsChecked="{Binding Remember, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Grid x:Name="grdShift"
                              Grid.Row="3"
                              Margin="30,2,0,2"
                              HorizontalAlignment="Left"
                              Visibility="{Binding VisibilityAllowShift}">
                            <TextBlock x:Name="txtblShift"
                                       Grid.Row="3"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Style="{DynamicResource TextBlockNormal}"
                                       Text="{DynamicResource LG_TextBlock_Shift}"
                                       TextWrapping="NoWrap" />
                            <ComboBox x:Name="cmbShift"
                                      Width="90.417"
                                      Margin="65,0,0,0.277"
                                      HorizontalAlignment="Left"
                                      DisplayMemberPath="Text"
                                      ItemsSource="{Binding Shifts}"
                                      SelectedItem="{Binding ShiftItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Value" />
                        </Grid>
                        <TextBlock x:Name="txtblChangePassword"
                                   Grid.Row="3"
                                   Margin="112,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed">
                            <Hyperlink Command=""
                                       Foreground="#FFFFFFFF">
                                <InlineUIContainer>
                                    <TextBlock x:Name="txtblChangePassword1"
                                               FontWeight="Bold"
                                               Style="{DynamicResource TextBlockNormal}"
                                               Text="Change Password"
                                               TextWrapping="NoWrap" />
                                </InlineUIContainer>
                            </Hyperlink>
                        </TextBlock>
                        <Rectangle x:Name="Line"
                                   Grid.Row="4"
                                   Height="1"
                                   Margin="0,10,0,0"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Top"
                                   Fill="{DynamicResource Spilter_Line_Background}" />
                        <StackPanel x:Name="stkpBtn"
                                    Grid.Row="5"
                                    Height="Auto"
                                    Margin="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                            <Button x:Name="btnLogin"
                                    Command="{Binding LoginCommand}"
                                    Width="80"
                                    Height="28"
                                    IsDefault="True">
                                <StackPanel x:Name="stkpBtnLogin"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                    <Rectangle x:Name="imgLogin"
                                               Width="20"
                                               Height="20"
                                               Fill="{DynamicResource Login}" />
                                    <TextBlock x:Name="txtblLogin"
                                               Margin="5,0,0,0"
                                               VerticalAlignment="Center"
                                               Style="{DynamicResource ButtonTextBlock}"
                                               Text="{DynamicResource LG_TextBlock_Login}"
                                               TextWrapping="NoWrap" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="btnExit"
                                    Width="80"
                                    Height="28"
                                    Margin="10,0,0,0"
                                    IsCancel="True">
                                <StackPanel x:Name="stkpBtnExit"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                    <Rectangle x:Name="imgExit"
                                               Width="20"
                                               Height="20"
                                               Fill="{DynamicResource Exit}" />
                                    <TextBlock x:Name="txtblExit"
                                               Margin="5,0,0,0"
                                               VerticalAlignment="Center"
                                               Style="{DynamicResource ButtonTextBlock}"
                                               Text="{DynamicResource LG_TextBlock_Exit}"
                                               TextWrapping="NoWrap" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
    <Window.InputBindings>
        <KeyBinding Command="{Binding OpenManagementUserCommand}"
                    Gesture="Ctrl+O" />
    </Window.InputBindings>
</Window>