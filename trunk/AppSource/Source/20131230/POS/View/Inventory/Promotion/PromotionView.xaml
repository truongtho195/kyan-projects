                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="25" />
                                    </Grid.RowDefinitions>
                                    <RadioButton x:Name="rbAllItem"
                                                 Margin="10,0,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Center"
                                                 Content="{DynamicResource C166}"
                                                 GroupName="rbAllItem"
                                                 IsChecked="{Binding SelectedPromotion.AffectDiscount, Converter={StaticResource integerToBooleanConverter}, ConverterParameter=0}" />
                                    <RadioButton x:Name="rbAllItemsinDepartment"
                                                 Grid.Row="1"
                                                 Margin="10,0,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Center"
                                                 Content="{DynamicResource C167}"
                                                 GroupName="rbAllItemsinDepartment"
                                                 IsChecked="{Binding SelectedPromotion.AffectDiscount, Converter={StaticResource integerToBooleanConverter}, ConverterParameter=1}" />
                                    <ComboBox x:Name="cmbAllItemsinDepartment"
                                              Grid.Row="1"
                                              Width="190"
                                              Height="21"
                                              Margin="160,0,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              DisplayMemberPath="Text"
                                              ItemsSource="{Binding CategoryCollection}"
                                              SelectedValue="{Binding SelectedPromotion.CategoryId, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                              SelectedValuePath="IntValue"
                                              Visibility="{Binding IsChecked, ElementName=rbAllItemsinDepartment, Converter={StaticResource boolToVisibilityConverter}}">
                                        <i:Interaction.Behaviors>
                                            <behavior:AutoFocusBehavior />
                                        </i:Interaction.Behaviors>
                                    </ComboBox>
                                    <RadioButton x:Name="rbAllItemsinVendor"
                                                 Grid.Row="2"
                                                 Margin="10,0,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Center"
                                                 Content="{DynamicResource C168}"
                                                 GroupName="cbAllItemsinVendor"
                                                 IsChecked="{Binding SelectedPromotion.AffectDiscount, Converter={StaticResource integerToBooleanConverter}, ConverterParameter=2}" />
                                    <ComboBox x:Name="cmbAllItemsinVendor"
                                              Grid.Row="2"
                                              Width="190"
                                              Height="21"
                                              Margin="160,0,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              DisplayMemberPath="Text"
                                              ItemsSource="{Binding VendorCollection}"
                                              SelectedValue="{Binding SelectedPromotion.VendorId, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                              SelectedValuePath="LongValue"
                                              Visibility="{Binding IsChecked, ElementName=rbAllItemsinVendor, Converter={StaticResource boolToVisibilityConverter}}">
                                        <i:Interaction.Behaviors>
                                            <behavior:AutoFocusBehavior />
                                        </i:Interaction.Behaviors>
                                    </ComboBox>
                                    <RadioButton x:Name="rbCustom"
                                                 Command="{Binding PopupCustomCommand}"
                                                 Grid.Row="3"
                                                 Margin="10,0,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Center"
                                                 Content="{DynamicResource C169}"
                                                 GroupName="rbCustom"
                                                 IsChecked="{Binding SelectedPromotion.AffectDiscount, Converter={StaticResource integerToBooleanConverter}, ConverterParameter=3}" />
                                    <Button x:Name="txtblCustom"
                                            Command="{Binding PopupCustomCommand}"
                                            CommandParameter="Edit"
                                            Grid.Row="3"
                                            Width="75"
                                            Height="28"
                                            Margin="70,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Content="{Binding SelectedPromotion.TotalSelectedProducts, Mode=OneWay}"
                                            Foreground="Yellow"
                                            Style="{DynamicResource ButtonDatagrid}"
                                            Visibility="{Binding SelectedPromotion.AffectDiscount, Converter={StaticResource intergerToVisibilityConverter}, ConverterParameter=3}" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </control:BusyIndicator>
    </Grid>
</UserControl>