<UserControl x:Class="CPC.POS.View.PopupVendorAdvanceSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behavior="clr-namespace:CPC.Toolkit.Behavior"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helper="clr-namespace:CPC.Helper"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:textBoxControl="clr-namespace:CPCToolkitExt.TextBoxControl;assembly=CPCToolkitExt"
             Width="548"
             Height="257"
             mc:Ignorable="d">
    <Grid x:Name="grdVendorAdvanceSearch">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Border x:Name="brdContentVendorAdvanceSearch"
                Margin="15,20,15,15"
                Background="{DynamicResource TabControlBackground}"
                BorderBrush="{DynamicResource TabControlBorder}"
                BorderThickness="1">
            <Grid x:Name="grdContentVendorAdvanceSearch"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="74" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="0" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="txtblFirstName"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="First Name"
                           TextWrapping="NoWrap" />
                <textBoxControl:TextBox x:Name="txtFirstName"
                                        Grid.Column="1"
                                        Margin="0,2,10,2"
                                        Padding="2,0,2,0"
                                        Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="NoWrap">
                    <i:Interaction.Behaviors>
                        <behavior:AutoFocusBehavior />
                    </i:Interaction.Behaviors>
                </textBoxControl:TextBox>
                <TextBlock x:Name="txtblLastName"
                           Grid.Column="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Last Name"
                           TextWrapping="NoWrap" />
                <textBoxControl:TextBox x:Name="txtLastName"
                                        Grid.Column="3"
                                        Margin="0,2,10,2"
                                        Padding="2,0,2,0"
                                        Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="NoWrap" />
                <TextBlock x:Name="txtblPhone"
                           Grid.Row="1"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Phone"
                           TextWrapping="NoWrap" />
                <textBoxControl:TextBoxPhone x:Name="txtPhone"
                                             Grid.Row="1"
                                             Grid.Column="1"
                                             Margin="0,2,10,2"
                                             Padding="2,0,2,0"
                                             TextWrapping="NoWrap"
                                             Value="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock x:Name="txtblEmail"
                           Grid.Row="1"
                           Grid.Column="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Email"
                           TextWrapping="NoWrap" />
                <textBoxControl:TextBox x:Name="txtEmail"
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        Height="21"
                                        Margin="0,2,10,2"
                                        Padding="2,0,2,0"
                                        Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="NoWrap" />
                <TextBlock x:Name="txtblCompany"
                           Grid.Row="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Company"
                           TextWrapping="NoWrap" />
                <textBoxControl:TextBox x:Name="txtCompany"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="3"
                                        Margin="0,2,10,2"
                                        Text="{Binding Company, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="NoWrap" />
                <ComboBox x:Name="cmbAddress"
                          Grid.Row="3"
                          Height="21"
                          Margin="10,2"
                          DisplayMemberPath="Text"
                          Foreground="White"
                          ItemContainerStyle="{DynamicResource ComboBoxItemAddress}"
                          ItemsSource="{Binding AddressTypeList}"
                          SelectedValue="{Binding AddressTypeID}"
                          SelectedValuePath="IntValue"
                          Style="{DynamicResource AddressComboStyle}" />
                <textBoxControl:TextBox x:Name="txtAddress"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="3"
                                        Margin="0,2,10,2"
                                        Padding="2,0,2,0"
                                        Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="Wrap" />
                <TextBlock x:Name="txtblFedTaxID"
                           Grid.Row="5"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Fed Tax ID"
                           TextWrapping="NoWrap" />
                <textBoxControl:TextBoxTaxID x:Name="txtFedTaxID"
                                             Grid.Row="5"
                                             Grid.Column="1"
                                             Margin="0,2,10,2"
                                             Padding="2,0,2,0"
                                             TextWrapping="NoWrap"
                                             Value="{Binding FedTaxID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock x:Name="txtblBasicStatus"
                           Grid.Row="5"
                           Grid.Column="2"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Status"
                           TextWrapping="NoWrap" />
                <ComboBox x:Name="cmbBasicStatus"
                          Grid.Row="5"
                          Grid.Column="3"
                          Margin="0,2,10,2"
                          DisplayMemberPath="Text"
                          ItemsSource="{x:Static helper:Common.StatusBasicAll}"
                          SelectedValue="{Binding Status}"
                          SelectedValuePath="Value" />
                <TextBlock x:Name="txtblGroup"
                           Grid.Row="6"
                           Margin="10,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Style="{DynamicResource TextBlockNormal}"
                           Text="Group"
                           TextWrapping="NoWrap" />
                <ComboBox x:Name="cmbGroup"
                          Grid.Row="6"
                          Grid.Column="1"
                          Margin="0,2,10,2"
                          DisplayMemberPath="Text"
                          ItemsSource="{Binding GroupList}"
                          SelectedValue="{Binding GroupResource}"
                          SelectedValuePath="Value" />
            </Grid>
        </Border>
        <Rectangle x:Name="Line"
                   Height="1"
                   Margin="2,0"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Bottom"
                   Fill="{DynamicResource Spilter_Line_Background}" />
        <StackPanel x:Name="stkpBtn"
                    Grid.Row="1"
                    Height="Auto"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Button x:Name="btnOK"
                    Command="{Binding OkCommand}"
                    Width="80"
                    Height="28">
                <StackPanel x:Name="stkpBtnOK"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle Width="20"
                               Height="20"
                               Fill="{DynamicResource CheckMark}" />
                    <Rectangle x:Name="imgOK"
                               Width="20"
                               Height="20"
                               Fill="{DynamicResource OK}"
                               Visibility="Collapsed" />
                    <TextBlock x:Name="txtblOK"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Style="{DynamicResource ButtonTextBlock}"
                               Text="{DynamicResource Button_Ok}"
                               TextWrapping="NoWrap" />
                </StackPanel>
            </Button>
            <Button x:Name="btnCancel"
                    Command="{Binding CancelCommand}"
                    Width="80"
                    Height="28"
                    Margin="10,0,0,0"
                    IsCancel="True">
                <StackPanel x:Name="stkpBtnCancel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgCancel"
                               Width="20"
                               Height="20"
                               Fill="{DynamicResource Cancel}" />
                    <TextBlock x:Name="txtblExit"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Style="{DynamicResource ButtonTextBlock}"
                               Text="{DynamicResource Button_Cancel}"
                               TextWrapping="NoWrap" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>