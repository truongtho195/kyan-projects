                                                        </Binding>
                                                    </TextBlock.Visibility>
                                                </TextBlock>
                                                <textBoxControl:TextBox x:Name="txtCustom8"
                                                                        Grid.Row="7"
                                                                        Grid.Column="1"
                                                                        Margin="0,2,10,2"
                                                                        MaxLength="{StaticResource CustomMaxLength}"
                                                                        Padding="2,0,2,0"
                                                                        Text="{Binding SelectedVendor.Custom8, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                        Visibility="{Binding Visibility, ElementName=txtblCustom8}">
                                                    <i:Interaction.Behaviors>
                                                        <behavior:CharacterCasingBehavior CharacterCasingType="Title" />
                                                    </i:Interaction.Behaviors>
                                                </textBoxControl:TextBox>
                                                <Rectangle x:Name="LineCusomField"
                                                           Grid.Row="8"
                                                           Grid.ColumnSpan="4"
                                                           Height="1"
                                                           Margin="10,0"
                                                           HorizontalAlignment="Stretch"
                                                           VerticalAlignment="Center"
                                                           Fill="{DynamicResource GroupboxBorder}" />
                                            </Grid>
                                        </GroupBox>
                                    </Grid>
                                </AdornerDecorator>
                            </cpcTabControl:CPCTabItemControl>
                            <TabItem x:Name="tabitemProductList"
                                     Header="{DynamicResource VD_ProductList}">
                                <Grid x:Name="grdPrdoductVendor">
                                    <dataGridControl:DataGridControl x:Name="dtgrdVendorProduct"
                                                                     Margin="5,4.9,5,5"
                                                                     AutoGenerateColumns="False"
                                                                     CanUserAddRows="False"
                                                                     DisplayItems="{Binding NumberOfDisplayItems}"
                                                                     IsPaging="False"
                                                                     IsReadOnly="True"
                                                                     IsRollBackData="False"
                                                                     ItemsSource="{Binding SelectedVendor.ProductCollection}"
                                                                     NumberOfItems="{Binding SelectedVendor.ProductCollection.Count}"
                                                                     RowDetailsTemplate="{DynamicResource ProductVendorRowDetailsTemplate}"
                                                                     RowStyle="{DynamicResource DataGridToggleRowStyle}"
                                                                     Style="{DynamicResource DatagridWithRowHeader}">
                                        <dataGridControl:DataGridControl.Columns>
                                            <DataGridTemplateColumn Width="25"
                                                                    SortMemberPath="IsChecked">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <ToggleButton IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                      Style="{DynamicResource PlusMinusToggleButtonStyle}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Binding="{Binding Code, Mode=OneWay}"
                                                                Width="100"
                                                                HeaderTemplate="{StaticResource DataTemplate_VD_Header_Code}" />
                                            <DataGridTextColumn Binding="{Binding ItemTypeItem.Text, Mode=OneWay}"
                                                                Width="100"
                                                                HeaderTemplate="{StaticResource DataTemplate_VD_Header_ItemType}" />
                                            <DataGridTextColumn Binding="{Binding CategoryName, Mode=OneWay}"
                                                                Width="130"
                                                                HeaderTemplate="{StaticResource DataTemplate_VD_Header_Category}" />
                                            <DataGridTextColumn Binding="{Binding ProductName, Mode=OneWay}"
                                                                Width="150"
                                                                HeaderTemplate="{StaticResource DataTemplate_VD_Header_ItemName}" />
                                            <DataGridTextColumn Binding="{Binding Description, Mode=OneWay}"
                                                                Width="250"
                                                                HeaderTemplate="{StaticResource DataTemplate_VD_Header_Description}" />
                                            <DataGridTextColumn Binding="{Binding Attribute, Mode=OneWay}"
                                                                Width="80"
                                                                HeaderTemplate="{StaticResource DataTemplate_VD_Header_Attribute}" />
                                            <DataGridTextColumn Binding="{Binding Size, Mode=OneWay}"
                                                                Width="80"
                                                                HeaderTemplate="{StaticResource DataTemplate_VD_Header_Size}" />
                                            <DataGridTextColumn Binding="{Binding Barcode, Mode=OneWay}"
                                                                Width="100"
                                                                HeaderTemplate="{StaticResource DataTemplate_VD_Header_Barcode}" />
                                            <DataGridTemplateColumn Width="80"
                                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_RegularPrice}"
                                                                    SortMemberPath="RegularPrice">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   Text="{Binding RegularPrice, Mode=OneWay, StringFormat=c}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </dataGridControl:DataGridControl.Columns>
                                    </dataGridControl:DataGridControl>
                                </Grid>
                            </TabItem>
                            <TabItem x:Name="tabitemPOHistory"
                                     Header="{DynamicResource PD_PurchaseHistory}">
                                <TabItem.Visibility>
                                    <Binding Path="SelectedVendor.IsNew"
                                             Mode="OneWay">
                                        <Binding.Converter>
                                            <converter:BoolToVisibilityConverter FalseToVisibility="Visible" />
                                        </Binding.Converter>
                                    </Binding>
                                </TabItem.Visibility>
                                <Grid x:Name="grdContentPOHistory">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="5" />
                                    </Grid.RowDefinitions>
                                    <dataGridControl:DataGridControl x:Name="dtgrdPOHistory"
                                                                     Grid.Row="1"
                                                                     Margin="5,5,5,0"
                                                                     AutoGenerateColumns="False"
                                                                     CanUserAddRows="False"
                                                                     IsPaging="False"
                                                                     IsReadOnly="True"
                                                                     IsRollBackData="False"
                                                                     ItemsSource="{Binding SelectedVendor.PurchaseOrderCollection}"
                                                                     Style="{DynamicResource DatagridWithRowHeader}"
                                                                     VisibilityNavigationBar="Collapsed">
                                        <dataGridControl:DataGridControl.Columns>
                                            <DataGridTextColumn Binding="{Binding PurchaseOrderNo, Mode=OneWay}"
                                                                Width="85"
                                                                HeaderTemplate="{StaticResource DataTemplate_VD_Header_OrderNum}" />
                                            <DataGridTemplateColumn Width="70"
                                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_OrderDate}"
                                                                    SortMemberPath="PurchasedDate">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   Text="{Binding PurchasedDate, Mode=OneWay, StringFormat={x:Static local:Define.DateFormat}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Binding="{Binding StatusItem.Text, Mode=OneWay}"
                                                                Width="100"
                                                                HeaderTemplate="{StaticResource DataTemplate_VD_Header_Status}" />
                                            <DataGridTemplateColumn Width="*"
                                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_Total}"
                                                                    SortMemberPath="Total">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   Text="{Binding Total, ConverterCulture={x:Static local:Define.ConverterCulture}, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Width="*"
                                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_Paid}"
                                                                    SortMemberPath="Paid">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   Text="{Binding Paid, ConverterCulture={x:Static local:Define.ConverterCulture}, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Width="*"
                                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_Balance}"
                                                                    SortMemberPath="Balance">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   Text="{Binding Balance, ConverterCulture={x:Static local:Define.ConverterCulture}, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </dataGridControl:DataGridControl.Columns>
                                    </dataGridControl:DataGridControl>
                                    <Grid x:Name="grdDatagridBottomPOHistory"
                                          Grid.Row="2"
                                          Height="25"
                                          Margin="5,0"
                                          VerticalAlignment="Bottom"
                                          d:LayoutOverrides="GridBox">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="16" />
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="18" />
                                        </Grid.ColumnDefinitions>
                                        <Border x:Name="brdPOHistoryBackground"
                                                Grid.ColumnSpan="8"
                                                Background="{DynamicResource DatagridBottomBackground}"
                                                BorderBrush="{DynamicResource DatagridBottomBorder}"
                                                BorderThickness="1,0,1,1"
                                                d:LayoutOverrides="GridBox" />
                                        <TextBlock x:Name="txtblBindingTotal"
                                                   Grid.Column="4"
                                                   Margin="0,0,3,0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource TextBlockDatagridBottomTotal}"
                                                   Text="{Binding TotalPurchaseOrder.Total, ConverterCulture={x:Static local:Define.ConverterCulture}, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}}"
                                                   TextWrapping="NoWrap" />
                                        <TextBlock x:Name="txtblBindingPaid"
                                                   Grid.Column="5"
                                                   Margin="0,0,3,0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource TextBlockDatagridBottomTotal}"
                                                   Text="{Binding TotalPurchaseOrder.Paid, ConverterCulture={x:Static local:Define.ConverterCulture}, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}}"
                                                   TextWrapping="NoWrap" />
                                        <TextBlock x:Name="txtblBindingBalance"
                                                   Grid.Column="6"
                                                   Margin="0,0,3,0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource TextBlockDatagridBottomTotal}"
                                                   Text="{Binding TotalPurchaseOrder.Balance, ConverterCulture={x:Static local:Define.ConverterCulture}, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}}"
                                                   TextWrapping="NoWrap" />
                                    </Grid>
                                </Grid>
                            </TabItem>
                        </cpcTabControl:CPCTabControl>
                    </Grid>
                </Grid>
            </Grid>
        </control:BusyIndicator>
    </Grid>
</UserControl>