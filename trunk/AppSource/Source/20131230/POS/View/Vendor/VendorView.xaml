<UserControl x:Class="CPC.POS.View.VendorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:addressControl="clr-namespace:CPCToolkitExt.AddressControl;assembly=CPCToolkitExt"
             xmlns:behavior="clr-namespace:CPC.Toolkit.Behavior"
             xmlns:comboBoxControl="clr-namespace:CPCToolkitExt.ComboBoxControl;assembly=CPCToolkitExt"
             xmlns:control="clr-namespace:Xceed.Wpf.Toolkit;assembly=WPFToolkit.Extended"
             xmlns:converter="clr-namespace:CPC.Converter"
             xmlns:cpcControl="clr-namespace:CPC.Control"
             xmlns:cpcTabControl="clr-namespace:CPCToolkitExt.OtherControl;assembly=CPCToolkitExt"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dataGridControl="clr-namespace:CPCToolkitExt.DataGridControl;assembly=CPCToolkitExt"
             xmlns:helper="clr-namespace:CPC.Helper"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:CPC.POS"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             xmlns:textBoxControl="clr-namespace:CPCToolkitExt.TextBoxControl;assembly=CPCToolkitExt"
             x:Name="vendorView"
             Background="{DynamicResource UserControlBackground}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <behavior:BindingHelper x:Key="customFieldBindingHelper"
                                Data="{Binding Path=CustomFieldCollection}" />
        <!--  region Converter  -->
        <converter:IntegerToBooleanConverter x:Key="integerToBooleanConverter" />
        <converter:ComboxItemToTextConverter x:Key="comboxItemToTextConverter" />
        <converter:StringFormatConverter x:Key="stringFormatConverter" />
        <converter:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <converter:BooleanToIntegerConverter x:Key="booleanToIntegerConverter" />
        <converter:EnumToBoolConverter x:Key="enumToBoolConverter" />
        <converter:EnumToCollapsedConverter x:Key="enumToCollapsedConverter" />
        <converter:StringToImageSourceConverter x:Key="stringToImageSourceConverter" />
        <converter:PermissionConverter x:Key="permissionConverter" />
        <!--  endregion Converter  -->
        <!--  MaxLengthField  -->
        <s:Int32 x:Key="GuestNoMaxLength">16</s:Int32>
        <s:Int32 x:Key="FirstNameMaxLength">30</s:Int32>
        <s:Int32 x:Key="LastNameMaxLength">30</s:Int32>
        <s:Int32 x:Key="CompanyMaxLength">100</s:Int32>
        <s:Int32 x:Key="WebsiteMaxLength">30</s:Int32>
        <s:Int32 x:Key="EmailMaxLength">50</s:Int32>
        <s:Int32 x:Key="IMMaxLength">50</s:Int32>
        <s:Int32 x:Key="RemarkMaxLength">1000</s:Int32>
        <s:Int32 x:Key="CustomMaxLength">50</s:Int32>
        <s:Int32 x:Key="CreditLineMaxLength">10</s:Int32>
        <!--  region HeaderTemplate  -->
        <DataTemplate x:Key="DataTemplate_VD_Header_AccountNum">
            <TextBlock Text="{DynamicResource EM_TextBlock_Account}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Status">
            <TextBlock Text="{DynamicResource C151}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Company">
            <TextBlock Text="{DynamicResource C170}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_FirstName">
            <TextBlock Text="{DynamicResource PD_FirstName}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_LastName">
            <TextBlock Text="{DynamicResource PD_LastName}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Group">
            <TextBlock Text="{DynamicResource VD_Group}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_City">
            <TextBlock Text="{DynamicResource C180}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Country">
            <TextBlock Text="{DynamicResource C172}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Phone">
            <TextBlock Text="{DynamicResource C173}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Cellphone">
            <TextBlock Text="{DynamicResource PD_Cellphone}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Email">
            <TextBlock Text="{DynamicResource C184}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Website">
            <TextBlock Text="{DynamicResource C185}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Code">
            <TextBlock Text="{DynamicResource C174}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_ItemType">
            <TextBlock Text="{DynamicResource PD_ItemType}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Category">
            <TextBlock Text="{DynamicResource PD_Category}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_ItemName">
            <TextBlock Text="{DynamicResource C115}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Description">
            <TextBlock Text="{DynamicResource C138}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Attribute">
            <TextBlock Text="{DynamicResource C116}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Size">
            <TextBlock Text="{DynamicResource C117}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Barcode">
            <TextBlock Text="{DynamicResource C176}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_RegularPrice">
            <TextBlock Text="{DynamicResource C139}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_OrderNum">
            <TextBlock Text="{DynamicResource Text_OrderNum}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_OrderDate">
            <TextBlock Text="{DynamicResource C148}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Total">
            <TextBlock Text="{DynamicResource Text_OrderTotal}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Paid">
            <TextBlock Text="{DynamicResource C107}" />
        </DataTemplate>
        <DataTemplate x:Key="DataTemplate_VD_Header_Balance">
            <TextBlock Text="{DynamicResource C108}" />
        </DataTemplate>
        <!--  endregion HeaderTemplate  -->
        <!--  ProductVendorRowDetailsTemplate  -->
        <DataTemplate x:Key="ProductVendorRowDetailsTemplate">
            <Grid x:Name="Layout1"
                  VerticalAlignment="Top">
                <ScrollViewer x:Name="svRowDetailOTTemplate"
                              Width="Auto"
                              Height="Auto"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              VerticalScrollBarVisibility="Disabled">
                    <Grid x:Name="grdOTTemplate"
                          Height="Auto"
                          Background="{DynamicResource Datagrid_RowDetailTemplate_Background1}">
                        <Border x:Name="brdOTrTemplate"
                                Margin="15"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{DynamicResource Datagrid_RowDetailTemplate_Background2}"
                                BorderBrush="{DynamicResource Datagrid_RowDetailTemplate_Border}"
                                BorderThickness="1">
                            <Grid x:Name="grdTemplateProductVendor"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*"
                                                      MinWidth="150" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="10" />
                                </Grid.RowDefinitions>
                                <!--
                                    <Image Grid.RowSpan="6"
                                    Width="120"
                                    Height="100"
                                    Margin="29,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Source="/POS;component/Image/Shoes.png"
                                    Stretch="Uniform" />
                                -->
                                <Grid x:Name="grdProductPhotoDefault"
                                      Grid.RowSpan="6"
                                      Width="120"
                                      Height="100"
                                      Margin="29,0,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center">
                                    <!--  "Visibility" IsNew = True => empty image, show this image  -->
                                    <Rectangle x:Name="imgCustomer"
                                               Width="100"
                                               Height="100"
                                               Fill="{DynamicResource Product}"
                                               Visibility="{Binding PhotoDefault.IsNew, Converter={StaticResource boolToVisibilityConverter}, ConverterParameter=True}" />
                                    <!--  Visibility IsNew = False => has image in database, show this image  -->
                                    <Image x:Name="imgProductPhotoDefault"
                                           Width="100"
                                           Height="100"
                                           Source="{Binding PhotoDefault.ImagePath, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource stringToImageSourceConverter}}"
                                           Stretch="Fill"
                                           Visibility="{Binding PhotoDefault.IsNew, Converter={StaticResource boolToVisibilityConverter}, ConverterParameter=False}" />
                                </Grid>
                                <TextBlock x:Name="txtblTemplateItem"
                                           Grid.Row="1"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{DynamicResource VD_Item}" />
                                <TextBlock x:Name="txtblBindingTemplateItem"
                                           Grid.Row="1"
                                           Grid.Column="2"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Code, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplatePartNo"
                                           Grid.Row="1"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{DynamicResource PD_PartNo}" />
                                <TextBlock x:Name="txtblBindingTemplatePartNo"
                                           Grid.Row="1"
                                           Grid.Column="4"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding PartNumber, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateAttribute"
                                           Grid.Row="2"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{DynamicResource C116}" />
                                <TextBlock x:Name="txtblBindingTemplateAttribute"
                                           Grid.Row="2"
                                           Grid.Column="2"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Attribute, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateSize"
                                           Grid.Row="2"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{DynamicResource C117}" />
                                <TextBlock x:Name="txtblBindingTemplateSize"
                                           Grid.Row="2"
                                           Grid.Column="4"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Size, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateDescription"
                                           Grid.Row="3"
                                           Grid.Column="1"
                                           Margin="0,5.861,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{DynamicResource C138}" />
                                <TextBlock x:Name="txtblBindingTemplateDescription"
                                           Grid.Row="3"
                                           Grid.Column="2"
                                           Grid.ColumnSpan="3"
                                           Margin="0,5.861,0,0"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Top"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Description, Mode=OneWay}"
                                           TextTrimming="WordEllipsis"
                                           TextWrapping="Wrap"
                                           d:LayoutOverrides="GridBox" />
                                <TextBlock x:Name="txtblTemplatePrice"
                                           Grid.Row="4"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{DynamicResource C119}" />
                                <TextBlock x:Name="txtblBindingTemplateCost"
                                           Grid.Row="4"
                                           Grid.Column="2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding RegularPrice, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}, ConverterCulture={x:Static local:Define.ConverterCulture}}" />
                                <TextBlock x:Name="txtblTemplateBaseUnit"
                                           Grid.Row="4"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{DynamicResource PD_BaseUnit}" />
                                <TextBlock x:Name="txtblBindingTemplateBaseUnit"
                                           Grid.Row="4"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding UOMName, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateQuantity"
                                           Grid.Row="5"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{DynamicResource C120}" />
                                <TextBlock x:Name="txtblBindingTemplateQuantity"
                                           Grid.Row="5"
                                           Grid.Column="2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding OnHandStore1, Mode=OneWay, StringFormat={x:Static local:Define.NumericFormat}, ConverterCulture={x:Static local:Define.ConverterCulture}}" />
                                <TextBlock x:Name="txtblTemplateTax"
                                           Grid.Row="5"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{DynamicResource SO_TextBlock_Tax}" />
                                <TextBlock x:Name="txtblBindingTemplateTax"
                                           Grid.Row="5"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding TaxCode, Mode=OneWay}" />
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
	<UserControl.InputBindings>
<KeyBinding Command="{Binding HelpCommand}"
                    Gesture="F1" />
</UserControl.InputBindings>
    <Grid x:Name="grdLayout">
        <Rectangle x:Name="UserControl_Background_Image"
                   Fill="{DynamicResource UserControl_Background_Image}" />
        <control:BusyIndicator IsBusy="{Binding IsBusy}">
            <Grid x:Name="grdVendor">
                <Grid x:Name="grdSearch">
                    <Grid.Visibility>
                        <Binding Path="IsSearchMode"
                                 Mode="OneWay"
                                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.Converter>
                                <converter:BoolToVisibilityConverter FalseToVisibility="Collapsed" />
                            </Binding.Converter>
                        </Binding>
                    </Grid.Visibility>
                    <Grid x:Name="grdContentSearch"
                          Grid.Row="1"
                          Margin="0,0,15,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="85" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <GroupBox x:Name="gbSearch"
                                  Margin="10,10,0,0">
                            <GroupBox.Header>
                                <TextBlock x:Name="txtblSearch"
                                           Style="{DynamicResource GroupboxTextBlock}"
                                           Text="{DynamicResource C113}" />
                            </GroupBox.Header>
                            <Grid x:Name="grdgbSearch"
                                  Margin="0,4,0,0">
                                <Grid x:Name="grdgbContentSearch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <control:WatermarkTextBox x:Name="txtKeyword"
                                                              Margin="10,2"
                                                              VerticalContentAlignment="Center"
                                                              BorderBrush="{DynamicResource TextBoxCanlendarComboboxBorderBrush}"
                                                              Padding="24,0,2,0"
                                                              TextWrapping="NoWrap"
                                                              Watermark="{DynamicResource C135}">
                                        <control:WatermarkTextBox.InputBindings>
                                            <KeyBinding Key="Enter"
                                                        Command="{Binding SearchCommand}"
                                                        CommandParameter="{Binding Text, ElementName=txtKeyword}" />
                                        </control:WatermarkTextBox.InputBindings>
                                        <i:Interaction.Behaviors>
                                            <behavior:AutoFocusBehavior />
                                        </i:Interaction.Behaviors>
                                    </control:WatermarkTextBox>
                                    <Rectangle x:Name="imgFind"
                                               Width="20"
                                               Margin="13,3,0,3"
                                               HorizontalAlignment="Left"
                                               Fill="{DynamicResource Find}" />
                                    <Button x:Name="btnAdvanceSearch"
                                            Command="{Binding PopupAdvanceSearchCommand}"
                                            Grid.Row="1"
                                            Width="100"
                                            Height="20"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource C104}"
                                            Style="{DynamicResource ButtonAdvanceSearch}" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <dataGridControl:DataGridControl x:Name="dtgrdVendorDirectory"
                                                         Grid.Row="1"
                                                         Margin="10,10.1,0,10"
                                                         AutoGenerateColumns="False"
                                                         behavior:DoubleClickCommandBehavior.DoubleClickCommand="{Binding DoubleClickViewCommand}"
                                                         behavior:DoubleClickCommandBehavior.DoubleClickCommandParameter="{Binding SelectedItem, ElementName=dtgrdVendorDirectory}"
                                                         CanUserAddRows="False"
                                                         CurrentColumnCollection="{Binding ColumnCollection, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                                                         DataFilterResult="{Binding FilterEmployeeCollection, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                                                         DisplayItems="{Binding NumberOfDisplayItems}"
                                                         IsColunmHidden="True"
                                                         IsPaging="False"
                                                         IsReadOnly="True"
                                                         IsRollBackData="False"
                                                         ItemsSource="{Binding VendorCollection}"
                                                         NumberOfItems="{Binding VendorCollection.Count}"
                                                         RowStyle="{DynamicResource DataGridToggleRowStyle}"
                                                         SelectionMode="Extended"
                                                         Style="{DynamicResource DatagridWithRowHeader}">
                            <dataGridControl:DataGridControl.ContextMenu>
                                <ContextMenu Tag="{Binding PlacementTarget, RelativeSource={RelativeSource Mode=Self}}">
                                    <MenuItem Header="{DynamicResource C125}"
                                              Command="{Binding NewCommand}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource NewItem}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="{DynamicResource C126}"
                                              Command="{Binding EditCommand}"
                                              CommandParameter="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}, Mode=FindAncestor}}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource EditItem}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="{DynamicResource C127}"
                                              Command="{Binding DeletesCommand}"
                                              CommandParameter="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}, Mode=FindAncestor}}"
                                              IsEnabled="{Binding ., ConverterParameter=PO100-01-04, Converter={StaticResource permissionConverter}}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource DeleteItem}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="{DynamicResource C128}"
                                              Command="{Binding DuplicateCommand}"
                                              CommandParameter="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}, Mode=FindAncestor}}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource DuplicateItem}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="{DynamicResource C189}"
                                              Command="{Binding PopupMergeItemCommand}"
                                              CommandParameter="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}, Mode=FindAncestor}}"
                                              IsEnabled="{Binding ., ConverterParameter=PO100-01-03, Converter={StaticResource permissionConverter}}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource MergeItem}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="{DynamicResource PO100}"
                                              Command="{Binding PurchaseOrderCommand}"
                                              CommandParameter="{Binding Tag.SelectedItem, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}, Mode=FindAncestor}}"
                                              IsEnabled="{Binding ., ConverterParameter=PO100-02-02, Converter={StaticResource permissionConverter}}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource PurchaseOrder}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </dataGridControl:DataGridControl.ContextMenu>
                            <dataGridControl:DataGridControl.Columns>
                                <DataGridTextColumn Binding="{Binding GuestNo, Mode=OneWay}"
                                                    Width="85"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.GuestNo}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_AccountNum}" />
                                <DataGridTextColumn Binding="{Binding StatusItem.Text, Mode=OneWay}"
                                                    Width="100"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.Status}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_Status}" />
                                <DataGridTextColumn Binding="{Binding Company, Mode=OneWay}"
                                                    Width="150"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.Company}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_Company}" />
                                <DataGridTextColumn Binding="{Binding FirstName, Mode=OneWay}"
                                                    Width="150"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.FirstName}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_FirstName}" />
                                <DataGridTextColumn Binding="{Binding LastName, Mode=OneWay}"
                                                    Width="150"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.LastName}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_LastName}" />
                                <DataGridTextColumn Binding="{Binding GroupName, Mode=OneWay}"
                                                    Width="150"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.Group}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_Group}" />
                                <DataGridTextColumn Binding="{Binding AddressModel.City, Mode=OneWay}"
                                                    Width="150"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.City}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_City}" />
                                <DataGridTextColumn Binding="{Binding CountryItem.Text, Mode=OneWay}"
                                                    Width="150"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.Country}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_Country}" />
                                <DataGridTextColumn Binding="{Binding Phone1, ConverterParameter=Phone, Converter={StaticResource stringFormatConverter}, Mode=OneWay}"
                                                    Width="120"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.Phone}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_Phone}" />
                                <DataGridTextColumn Binding="{Binding CellPhone, ConverterParameter=Phone, Converter={StaticResource stringFormatConverter}, Mode=OneWay}"
                                                    Width="120"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.CellPhone}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_Cellphone}" />
                                <DataGridTextColumn Binding="{Binding Email, Mode=OneWay}"
                                                    Width="200"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.Email}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_Email}" />
                                <DataGridTextColumn Binding="{Binding Website, Mode=OneWay}"
                                                    Width="200"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.Website}"
                                                    HeaderTemplate="{StaticResource DataTemplate_VD_Header_Website}" />
                                <DataGridTextColumn Binding="{Binding Custom1}"
                                                    Width="100"
                                                    dataGridControl:DataGridColumnExtensions.Name="{x:Static local:SearchOptions.Custom1}">
                                    <DataGridTextColumn.Visibility>
                                        <Binding Path="Data[0].IsShow"
                                                 Mode="OneWay"
                                                 UpdateSourceTrigger="PropertyChanged"
                                                 Source="{StaticResource customFieldBindingHelper}">
                                            <Binding.Converter>
                                                <converter:BoolToVisibilityConverter FalseToVisibility="Collapsed" />
                                            </Binding.Converter>
                                        </Binding>
                                    </DataGridTextColumn.Visibility>
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Tag="{Binding Data[0].IsShow, Mode=OneWay, Source={StaticResource customFieldBindingHelper}}"
                                                       Text="{Binding Data[0].Label, Mode=OneWay, Source={StaticResource customFieldBindingHelper}}" />

                                        </DataTemplate>
