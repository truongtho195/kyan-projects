<UserControl x:Class="CPC.POS.View.PopupMergeVendorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behavior="clr-namespace:CPC.Toolkit.Behavior"
             xmlns:comboBoxControl="clr-namespace:CPCToolkitExt.ComboBoxControl;assembly=CPCToolkitExt"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="498"
             Height="334"
             mc:Ignorable="d">
    <UserControl.Resources />
    <Grid x:Name="grdMergeVendor">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Border x:Name="brdContentMergeVendor"
                Margin="15,20,15,15"
                Background="{DynamicResource TabControlBackground}"
                BorderBrush="{DynamicResource TabControlBorder}"
                BorderThickness="1">
            <Grid x:Name="grdContentMergeVendor"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <GroupBox x:Name="gbMergeFrom"
                          Margin="0,0,5.1,0">
                    <GroupBox.Header>
                        <TextBlock x:Name="txtblMergeFrom"
                                   Style="{DynamicResource GroupboxTextBlock}"
                                   Text="Merge From"
                                   TextWrapping="NoWrap" />
                    </GroupBox.Header>
                    <Grid x:Name="grdContentMergeFrom"
                          Margin="0,4,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <comboBoxControl:ComboBoxControl x:Name="cmbMergeFrom"
                                                         Grid.Column="4"
                                                         Margin="5,2"
                                                         VerticalAlignment="Stretch"
                                                         DisplayMemberPath="Company"
                                                         HiddenMemberPath="IsChecked"
                                                         IsEnabled="False"
                                                         ItemsSource="{Binding VendorList, Mode=OneWay}"
                                                         SelectedItem="{Binding SourceVendor, Mode=TwoWay}"
                                                         SelectedValuePath="Id"
                                                         Style="{DynamicResource ComboBoxControl_CheckedItemIsHiddenStyle}"
                                                         VisibilityAddItem="Collapsed">
                            <i:Interaction.Behaviors>
                                <behavior:AutoFocusBehavior />
                            </i:Interaction.Behaviors>
                        </comboBoxControl:ComboBoxControl>
                        <TextBox x:Name="txtMergeFrom"
                                 Grid.Row="1"
                                 Margin="5"
                                 VerticalContentAlignment="Top"
                                 IsEnabled="False"
                                 Padding="2,0,2,0"
                                 Text="{Binding SourceVendorDetail, Mode=OneWay}"
                                 TextWrapping="Wrap" />
                    </Grid>
                </GroupBox>
                <GroupBox x:Name="gbMergeTo"
                          Grid.Column="1"
                          Margin="5,0,0,0">
                    <GroupBox.Header>
                        <TextBlock x:Name="txtblMergeTo"
                                   Style="{DynamicResource GroupboxTextBlock}"
                                   Text="Merge To"
                                   TextWrapping="NoWrap" />
                    </GroupBox.Header>
                    <Grid x:Name="grdContentMergeTo"
                          Margin="0,4,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <comboBoxControl:ComboBoxControl x:Name="cmbMergeTo"
                                                         Grid.Column="4"
                                                         Margin="5,2"
                                                         VerticalAlignment="Stretch"
                                                         DisplayMemberPath="Company"
                                                         HiddenMemberPath="IsChecked"
                                                         ItemsSource="{Binding VendorList, Mode=OneWay}"
                                                         SelectedItem="{Binding TargetVendor, Mode=TwoWay}"
                                                         SelectedValuePath="Id"
                                                         Style="{DynamicResource ComboBoxControl_CheckedItemIsHiddenStyle}"
                                                         VisibilityAddItem="Collapsed" />
                        <TextBox x:Name="txtMergeTo"
                                 Grid.Row="1"
                                 Margin="5"
                                 VerticalContentAlignment="Top"
                                 IsEnabled="False"
                                 Padding="2,0,2,0"
                                 Text="{Binding TargetVendorDetail, Mode=OneWay}"
                                 TextWrapping="Wrap" />
                    </Grid>
                </GroupBox>
            </Grid>
        </Border>
        <Rectangle x:Name="Line"
                   Grid.Row="1"
                   Height="1"
                   Margin="2,0,2,0"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   Fill="{DynamicResource Spilter_Line_Background}" />
        <StackPanel x:Name="stkpBtn"
                    Grid.Row="1"
                    Height="Auto"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Button x:Name="btnOK"
                    Command="{Binding OkCommand}"
                    Width="80"
                    Height="28">
                <StackPanel x:Name="stkpBtnOK"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgOK"
                               Width="20"
                               Height="20"
                               Fill="{DynamicResource OK}" />
                    <TextBlock x:Name="txtblOK"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Style="{DynamicResource ButtonTextBlock}"
                               Text="OK"
                               TextWrapping="NoWrap" />
                </StackPanel>
            </Button>
            <Button x:Name="btnCancel"
                    Command="{Binding CancelCommand}"
                    Width="80"
                    Height="28"
                    Margin="10,0,0,0"
                    IsCancel="True">
                <StackPanel x:Name="stkpBtnCancel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Rectangle x:Name="imgCancel"
                               Width="20"
                               Height="20"
                               Fill="{DynamicResource Cancel}" />
                    <TextBlock x:Name="txtblExit"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               Style="{DynamicResource ButtonTextBlock}"
                               Text="Cancel"
                               TextWrapping="NoWrap" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>