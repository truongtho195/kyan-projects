                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Row="1"
                       Foreground="{DynamicResource TextBrush2}"
                       FontWeight="Bold" />
                <Label x:Name="lbMiddleName"
                       Content="Tên Đệm :"
                       HorizontalAlignment="Left"
                       Grid.Row="1"
                       Foreground="{DynamicResource TextBrush2}"
                       FontWeight="Bold" Grid.Column="1" Margin="198,3.361,0,3.36" d:LayoutOverrides="Height" />
                <Label x:Name="lblLastName"
                       Content="Tên :"
                       HorizontalAlignment="Left"
                       Grid.Row="2"
                       FontWeight="Bold"
                       Foreground="#FF565656" d:LayoutOverrides="Height" VerticalAlignment="Center" />
                <Label x:Name="lblGender"
                       Content="Giới Tính :"
                       HorizontalAlignment="Left"
