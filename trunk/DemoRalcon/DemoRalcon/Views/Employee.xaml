                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#FF565656" />
            <Button x:Name="btnSave"
                    Content="Lưu"
                    Width="80"
                    Margin="10,0,0,0"
                    FontWeight="Bold"
